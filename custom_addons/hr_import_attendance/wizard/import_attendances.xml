<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="hr_attendance_view_form_inherit" model="ir.ui.view">
            <field name="name">hr.attendance.form</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='check_out']" position="after">
                   <field name="employee_card"/>
                   <field name="entry_door_name"/>
                   <field name="card_number"/>
                   <field name="entry_point"/>
                   <field name='entry_sl_no'/>
                   <field name="entry_remark"/>
                   <field name="entry_alarm_date"/>
                   <field name="exist_door_name"/>
                   <field name="exist_point"/>
                   <field name="exist_sl_no"/>
                   <field name="exist_remark"/>
                </xpath>
            </field>
        </record>

        <record id="import_attendances_wizard" model="ir.ui.view">
            <field name="name">import.attendances.wizard.form</field>
            <field name="model">import.attendances.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Bank Statement Lines">
                    <group>
                        <field name="file" filename="name"/>
                    </group>
                    <footer>
                        <button name="import_file" string="Import" type="object" class='oe_highlight'/>
                        or
                        <button name="cancel" string="Cancel" class="oe_link" special="cancel"/> 
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_import_attendances_wizard" model="ir.actions.act_window">
            <field name="name">Import Attendances</field>
            <field name="res_model">import.attendances.wizard</field>
            <!--          <field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_import_attendandce_mode" name="Import Attendances" parent="hr_attendance.menu_hr_attendance_manage_attendances" sequence="25" action="action_import_attendances_wizard"/>

        <menuitem id="hr_attendance.menu_hr_attendance_my_attendances" name="Check In / Check Out" parent="hr_attendance.menu_hr_attendance_root" sequence="21" groups="hr_attendance.group_hr_attendance" action="hr_attendance.hr_attendance_action_my_attendances"/>

  </data>
</openerp>
 
