<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="job_card_wizard" model="ir.ui.view">
        <field name="name">job.card.wizard.form</field>
		<field name="model">job.card.wizard</field>
		<field name="arch" type="xml">
		<form string="Create Job Card">
			<group>
				<group>
					<field name="name"/>
					<field name="supervisor_id"/>
					<field name="no_of_devices"/>
					<field name="scheduled_date"/>
				</group>
				<footer>
					<button name="create_job_card" string="Create Job Card" type="object" class="btn btn-primary"/> or
					<button string="Cancel" special="cancel" class="btn btn-primary"/>
				</footer>
            </group>
		</form>
		</field>
	</record>

    <record id="job_card_wizard_action" model="ir.actions.act_window">
        <field name="name">Create Job Card</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">job.card.wizard</field>
<!--        <field name="view_type">form</field>-->
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="generate_subscription_wizard" model="ir.ui.view">
        <field name="name">generate.subscription.wizard.form</field>
		<field name="model">generate.subscription.wizard</field>
		<field name="arch" type="xml">
		<form string="Generate Sub Renewal Quote">
			<group>
				<group colspan='5' col='4'>
					<field name="partner_id" readonly='1'/>
					<field name="subscription_ids" widget='many2many_tags' readonly='1'/>
				</group>
				<footer>
					<button name="create_quotation" string="Create Quote" type="object" class="btn btn-primary"/> or
					<button string="Cancel" special="cancel" class="btn btn-primary"/>
				</footer>
            </group>
		</form>
		</field>
	</record>

    <record id="generate_subscription_wizard_action" model="ir.actions.act_window">
        <field name="name">Generate Sub Renewal Quote</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">generate.subscription.wizard</field>
<!--        <field name="view_type">form</field>-->
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

