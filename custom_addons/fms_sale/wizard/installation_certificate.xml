<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	<record id="installation_certificate_tree" model="ir.ui.view">
		<field name="name">installation.certificate.tree</field>
		<field name="model">installation.certificate</field>
		<field name="arch" type="xml">
			<tree string="Installation Certificate" create="0">
				<field name="serial_no"/>
				<field name="vehicle_number"/>
				<field name="company_id"/>
				<field name="partner_id"/>
			</tree>
		</field>
    </record>

	 <record id="installation_certificate_form" model="ir.ui.view">
		<field name="name">installation.certificate.form</field>
		<field name="model">installation.certificate</field>
		<field name="arch" type="xml">
			<form string="Installation Certificate">
				<sheet>
					<group>
						<group>
							<field name="name"/>
							<field name="serial_no"/>
							<field name="vehicle_number"/>
						</group>
						<group>
							<field name="company_id"/>
							<field name="partner_id"/>
							<field name="validity"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>	
	</record>
	<record id="installation_certificate_action" model="ir.actions.act_window">
		<field name="name">Installation Certificate</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">installation.certificate</field>
<!--		<field name="view_type">form</field>-->
		<field name="view_mode">tree,form</field>
		<field name="target">new</field>
    </record>
</odoo>	
