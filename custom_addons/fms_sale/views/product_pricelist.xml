<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--    Add the Price list code in product price list screen.-->
    <record id="product_pricelist_view_inherit" model="ir.ui.view">
        <field name="name">product.pricelist.view.inherit</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='pricelist_settings']/field[@name='currency_id']" position='before'>
                <field name="pricelist_code"/>
            </xpath>
        </field>
    </record>
</odoo>
