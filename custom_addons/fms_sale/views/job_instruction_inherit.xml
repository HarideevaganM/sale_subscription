<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="job_instruction_inherit_id" model="ir.ui.view">
			<field name="name">job.instruction.inherit</field>
			<field name="model">job.instruction</field>
			<field name="inherit_id" ref="job_order_card_instruction.job_instruction_type_display_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='quality_checklist_ids']" position="after">
					<field name="start_date" />
					<field name="end_date"/>
				</xpath>
				<field name="job_id" position="after">
					<field name="product_id"/>
					<field name="device_serial_id"/>
					<field name="no_of_days"/>
				</field>	
			</field>
	</record>
	
	<record id="job_instruction_tree_inherit_id" model="ir.ui.view">
		<field name="name">job.instruction.tree.inherit</field>
		<field name="model">job.instruction</field>
		<field name="inherit_id" ref="job_order_card_instruction.job_instruction_type_display_tree"/>
		<field name="arch" type="xml">
			<field name="instruction_type" position="after">
				<field name="product_id"/>	
				<field name="device_serial_id"/>	
				<field name="start_date"/>	
				<field name="end_date"/>	
				<field name="no_of_days"/>	
			</field>
		</field>
	</record>
	
	<record id="job_order_instruction_form_inherit" model="ir.ui.view">
        <field name="name">project.task.form.view</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="job_order_card_instruction.job_order_instruction_form"/>
        <field name="arch" type="xml">
            <field name="quality_checklist_ids" position="attributes">
				<attribute name="invisible">1</attribute>
            </field>
            <field name="instruction_date" position="attributes">
				<attribute name="invisible">1</attribute>
            </field>
            <field name="quality_checklist_ids" position="after">
				<field name="no_of_device"/>
				<field name="no_of_device_per_day"/>
				<field name="start_date"/>
				<field name="end_date"/>
				<field name="installation_location_id"/>
				<field name="job_status"/>
				<field name="is_job_assigned" invisible="1"/>
            </field>
           <field name="user_id" position="attributes">
				<attribute name="string">Engineer</attribute>
			</field>
        </field>
    </record>
</odoo>
