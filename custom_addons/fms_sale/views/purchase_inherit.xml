<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- FIELDS ADDED IN PURCHASE ORDER-->	

	<record id="purchase_order_inherit" model="ir.ui.view">
			<field name="name">purchase.order.inherit</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
				<button name="print_quotation" position="after">
					<button name="update_sale" type="object" string="Update Sale" attrs="{'invisible':['|',('state','!=','purchase'),('sale_id','=',False)]}"/>
				</button>
				<button name="update_sale" position="after">
					<button name="submit_order" type="object" string="Submit Order" states="draft,sent"/>
				</button>
				<button name="submit_order" position="after">
					<button name="manager_approval" type="object" string="Approve" attrs="{'invisible':[('state','!=','awaiting_approval')]}"/>
				</button>
				<button id="draft_confirm" position="replace">
						<button name="button_confirm" type="object"  string="Confirm Order" id="draft_confirm" attrs="{'invisible':[('state','!=','manager_approved')]}"/>
				</button>
				<field name="partner_id" position="after">
					<field name="make_vendor_readonly"  invisible="1"/>
					<field name="sale_id"  invisible="1"/>
				</field>
				<field name="partner_id" position="replace">
					<field name="partner_id" attrs="{'readonly':[('make_vendor_readonly','=',True)]}"  />
				</field>
				<!--CHANGES-->
				<xpath expr="//field[@name='company_id']" position="attributes">
					<attribute name="invisible">1</attribute>
				</xpath>
				<xpath expr="//form/sheet/notebook/page/group/group/field[@name='incoterm_id']" position="after">
					<field name="instructions"/>
					<field name="warranty"/>
				</xpath>

			</field>
	</record>
	
	<record id="purchase_filter_inherit" model="ir.ui.view">
			<field name="name">purchase.filter.inherit</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
			<field name="arch" type="xml">	
				<filter name= "draft" position="replace">
					<filter domain="[('state','=',('awaiting_approval'))]" string="Manager Approval" name="To Approve" groups="purchase.group_purchase_manager"/>
				</filter>
			</field>
	</record>					
							
</odoo>
