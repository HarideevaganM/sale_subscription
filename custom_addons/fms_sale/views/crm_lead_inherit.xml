<odoo>
    <data>

        <record id="crm_case_tree_view_leads_inherited" model="ir.ui.view">
            <field name="name">crm.lead.tree.view.inherited</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_leads"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='email_from']" position="after">
                    <field name="date_deadline"/>
                    <field name="expected_revenue"/>
                </xpath>
            </field>
        </record>

        <record id="view_quotation_tree_inherited" model="ir.ui.view">
            <field name="name">view.quotation.tree.inherited</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <!--<xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>-->
                <xpath expr="//field[@name='name']" position="before">
                    <field name="quote_name" string="SQ Reference"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="string">Order Reference</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>