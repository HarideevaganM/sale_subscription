<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>        
        <record id="company_inherit_id" model="ir.ui.view">
            <field name="name">res.company.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='phone']" position="after">
                    <field name="acc_name"/>
                    <field name="account_number"/>
                    <field name="bank_name"/>
                    <field name="branch_name"/>
                    <field name="shift_code"/>
					<field name="fax_new"/>
                </xpath>
                <xpath expr="//field[@name='favicon']" position="after">
					<field name="logo1" widget="image" class="oe_avatar" />
					<field name="logo2" widget="image" class="oe_avatar" invisible="1"/>
                </xpath>
            </field>
          </record>

        <record id="partner_inherit_id" model="ir.ui.view">
            <field name="name">res.partner.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='function']" position="after">
                    <field name="customer_id"/>
                </xpath>
                <xpath expr="//field[@name='customer_id']" position="before">
                    <field name="subscription_customer"/>
                </xpath>
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="is_reseller"/>
                </xpath>
            </field>
          </record>
       </data>
</odoo>
