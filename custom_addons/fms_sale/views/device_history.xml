<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- DEVICE HISTORY FOR LEASE AND RENTAL-->
	
	<record id="device_history_tree" model="ir.ui.view">
        <field name="name">device.history.tree</field>
        <field name="model">device.history</field>
        <field name="arch" type="xml">
        <tree string="Device History">
            <field name="name"/>
            <field name="serial_number_id"/>
        </tree>
        </field>
    </record>
    <record id="device_history_form" model="ir.ui.view">
        <field name="name">device.history.form</field>
        <field name="model">device.history</field>
        <field name="arch" type="xml">
        <form string="Device History">
			<header>
                <button name="get_device_history" string="Get Device History" type="object"  class="btn-primary"/>
            </header>
			<sheet>
				    
				<group>
					<field name="name"/>
					<field name="serial_number_id"/>
				</group>
				<notebook>
					<page string="Device History">
						<field name="device_history_line" widget="one2many_list">
							<tree string ="Device Details" editable="bottom">
									<field name="contract_id" />
									<field name="sale_order_id"/>
									<field name="sale_type"/>
									<field name="contract_start_date"/>
									<field name="contract_end_date"/>
							</tree>
						</field>	
					</page>
				</notebook>
			</sheet>
		</form>
		</field>
	</record>
	<record id="device_history_action" model="ir.actions.act_window">
    <field name="name">Device History</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">device.history</field>
<!--    <field name="view_type">form</field>-->
    <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="device_history_menu"
            name="Device History"
            parent="sale.sale_order_menu"
            action="device_history_action"
            sequence="5"/>

<!-- VEHICLE HISTORY-->            
            
    <record id="vehicle_history_tree" model="ir.ui.view">
        <field name="name">vehicle.history.tree</field>
        <field name="model">vehicle.history</field>
        <field name="arch" type="xml">
        <tree string="Vehicle History">
            <field name="name"/>
            <field name="vehicle_id"/>
        </tree>
        </field>
    </record>
    <record id="vehicle_history_form" model="ir.ui.view">
        <field name="name">vehicle.history.form</field>
        <field name="model">vehicle.history</field>
        <field name="arch" type="xml">
        <form string="Vehicle History">
			<sheet>  
				<group>
					<field name="name"/>
					<field name="vehicle_id"/>
				</group>
				<notebook>
					<page string="Vehicle History">
						<field name="vehicle_history_line" widget="one2many_list">
							<tree string ="Vehicle Details" editable="bottom">

									<field name="name" />
									<field name="subscription_id"/>
									<field name="subscription_status"/>
							</tree>
						</field>
					</page>
				</notebook>
			</sheet>
		</form>
		</field>
	</record>
	<record id="vehicle_history_action" model="ir.actions.act_window">
    <field name="name">Vehicle History</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">vehicle.history</field>
<!--    <field name="view_type">form</field>-->
    <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="vehicle_history_menu"
            name="Vehicle History"
            parent="sale.sale_order_menu"
            action="vehicle_history_action"
            sequence="6"/>        
			
</odoo>
