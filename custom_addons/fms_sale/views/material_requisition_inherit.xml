<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="material_purchase_requisition_inherit" model="ir.ui.view">
        <field name="name">material.purchase.requisition.inherit</field>
        <field name="model">material.purchase.requisition</field>
        <field name="inherit_id" ref="material_purchase_requisitions.material_purchase_requisition_form_view"/>
        <field name="arch" type="xml">
			<xpath expr="//field[@name='requisition_type']" position="after">
				<field name="project_id" invisible="1"/>
			</xpath>
			<!--CHANGES-->
            <xpath expr="/form/sheet/group/group/field[@name='company_id']" position="attributes">
                 <attribute name="invisible">1</attribute>
            </xpath>
			<button name="request_stock" position="attributes">
				<attribute name="string">Create Picking</attribute>
			</button>
			<button name="action_show_po" position="attributes">
				<attribute name="invisible">1</attribute>
			</button>
			<field name="employee_id" position="attributes">
				<attribute name="string">Engineer</attribute>
			</field>

			<field name="task_id" position="attributes">
				<attribute name="string">Job Order</attribute>
			</field>
			<field name="requisiton_responsible_id" position="attributes">
				<attribute name="string">Project Manager</attribute>
			</field>
			<field name="project_id" position="attributes">
				<attribute name="string">Project</attribute>
			</field>
			<field name="requisiton_responsible_id" position="attributes">
				<attribute name="invisible">1</attribute>
			</field>
			<field name="date_end" position="attributes">
				<attribute name="invisible">1</attribute>
			</field>
			<field name="analytic_account_id" position="attributes">
				<attribute name="invisible">1</attribute>
			</field>

			<!--CHANGES-->
			<xpath expr="/form/sheet/group/group/field[@name='analytic_account_id']" position="after">
				<field name="partner_id"/>
			</xpath>
		</field>		
	</record>
	<!--CHANGES-->
	<record id="material_purchase_requisition_inherit_tree" model="ir.ui.view">
	    <field name="name">>material.purchase.requisition.inherit</field>
	    <field name="model">material.purchase.requisition</field>
		 <field name="inherit_id" ref="material_purchase_requisitions.material_purchase_requisition_tree_view"/>
	    <field name="arch" type="xml">
			<xpath expr="/tree/field[@name='company_id']" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
	    </field>
	</record>
	<!--CHANGES-->
	<record id="attachment_inherit_form" model="ir.ui.view">
	    <field name="name">attachment.inherit</field>
	    <field name="model">ir.attachment</field>
		 <field name="inherit_id" ref="base.view_attachment_form"/>
	    <field name="arch" type="xml">
			<xpath expr="/form/sheet/group/group/field[@name='company_id']" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
	    </field>
	</record>
</odoo>
