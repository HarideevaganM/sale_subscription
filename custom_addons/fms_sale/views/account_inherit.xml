<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--INHERITED ACCOUNT INVOICE FORM TO HIDE PRINT AND SEND BY EMAIL BUTTONS-->

    <record id="account_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_invoice_sent'][1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_invoice_sent'][2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!--<xpath expr="//button[@name='invoice_print'][1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='invoice_print'][2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>-->
<!--            <xpath expr="//field[@name='date_invoice']" position="attributes">-->
<!--                <attribute name="required">1</attribute>-->
<!--            </xpath>-->
            <xpath expr="//field[@name='payment_reference']" position="after">
				<field name="purchase_order_no"/>
				<field name="purchase_order_date"/>
				<field name="client_ref"/>
				<field name="sale_type" attrs="{'invisible': [('move_type','not in',('out_invoice','out_refund'))]}" />
                <field name="bill_start_date" invisible="1"/>
                <field name="bill_end_date" invisible="1"/>
                <field name="is_reseller" invisible="1"/>
            </xpath>
            <xpath expr="//notebook/page[2]" position="after">
                <page string="Inclusive Invoice Products">
                    <field name="inclusive_invoice_line" widget="One2many_list">
                        <tree editable="bottom" >
                            <field name="invoice_id" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="product_uom_qty"/>
                            <field name="product_uom"/>
                            <field name="price_unit"/>
                            <field name="discount"/>
                            <field name="price_subtotal" />
                        </tree>
                    </field>
                     <group class="oe_subtotal_footer oe_right">
    					<field name="amount_untaxed1"/>
    					<field name="amount_total1" class="oe_subtotal_footer_separator"/>
    				</group>
                </page>
                <page string="Vehicle &amp; Device Details">
                    <field name="vehicle_detail_ids">
                        <tree>
                            <field name="serial_no_id"/>
                            <field name="device_id"/>
                            <field name="vehicle_id"/>
                            <field name="installation_date"/>
                            <field name="status"/>
                        </tree>
                        <form>
                            <group>
                                <field name="serial_no_id"/>
                                <field name="device_id"/>
                                <field name="vehicle_id"/>
                                <field name="installation_date"/>
                                <field name="status"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
