<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	<record id="installation_certificate_tree" model="ir.ui.view">
	<field name="name">installation.certificate.tree</field>
	<field name="model">installation.certificate</field>
	<field name="arch" type="xml">
	<tree string="Installation Certificate">
			<field name="serial_no"/>
			<field name="create_date" invisible="1"/>
			<field name="installation_date"/>
			<field name="device_id"/>
			<field name="vehicle_number"/>
			<field name="partner_id"/>
	</tree>
	</field>
    </record>

	 <record id="installation_certificate_form" model="ir.ui.view">
		<field name="name">installation.certificate.form</field>
		<field name="model">installation.certificate</field>
		<field name="arch" type="xml">
		<form string="Installation Certificate">
			<sheet string="Installation Certificate">
			<group string="Installation Certificate">
			<group>
				<field name="name"/>
				<field name="job_card_id" options="{'no_create': True, 'no_create_edit':True}"/>
				<field name="serial_no" options="{'no_create': True, 'no_create_edit':True}"/>
				<field name="device_id" options="{'no_create': True, 'no_create_edit':True}"/>
				<field name="vehicle_number" options="{'no_create': True, 'no_create_edit':True}"/>
				<field name="fleet_description"/>
			</group>
			<group>
				<field name="company_id" options="{'no_create': True, 'no_create_edit':True}"/>
				<field name="partner_id" options="{'no_create': True, 'no_create_edit':True}"/>
				<field name="vin_no"/>
				<field name="validity" invisible="1"/>
				<field name="certificate_validity" invisible="1"/>
				<field name="is_certificate_expired" invisible="1"/>
				<field name="create_date" invisible="1"/>
				<field name="installation_date"/>
			</group>
			</group>
			<notebook>
				<page string="Certificate Subject">
					<group>
						<field name="certificate_subject"/>
					</group>
					<group string="Certificate Validation">
						<group>
							<label for="from_date" string="Validity"/>
							<div>
								<div>
									<field name="from_date"/>
									<span class="oe_inline">-</span>
									<field name="to_date"/>
								</div>
							</div>
						<field name="issue_date"/>
						</group>
					</group>
				</page>
			</notebook>
		</sheet>
		</form>
		</field>	
	</record>

	<record id="installation_certificate_action_id" model="ir.actions.act_window">
		<field name="name">Installation Certificate</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">installation.certificate</field>
<!--		<field name="view_type">form</field>-->
		<field name="view_mode">tree,form</field>
    </record>

</odoo>	
