<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="operation_team_id">
        <field name="name">Operation Team</field>
        <field name="sequence">1</field>
        <field name="visible" eval="0"/>
    </record>

    <record id="group_engineer" model="res.groups">
        <field name="name">Engineer</field>
        <field name="category_id" ref="fms_sale.operation_team_id"/>
    </record>

    <record id="group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="fms_sale.operation_team_id"/>
        <field name="implied_ids" eval="[(4, ref('fms_sale.group_engineer'))]"/>
    </record>

    <record id="rule_engineer_job_card_1" model="ir.rule">
        <field name="name">Job: Engineer to access own document</field>
        <field name="model_id" ref="fms_sale.model_job_card"/>
        <field name="domain_force">['|', ('engineer_id', '=', user.id), ('engineer_id', '=', False)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4, ref('fms_sale.group_engineer'))]"/>
    </record>

    <record id="job_card_Managers_rule" model="ir.rule">
        <field name="name">Job card Manager to access all engineer</field>
        <field name="model_id" ref="fms_sale.model_job_card"/>
        <field name="groups" eval="[(4, ref('fms_sale.group_manager'))]"/>
        <field name="domain_force">[(1,'=', 1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

<!--    access_website_support_account,website.support.ticket,fms_repair.model_website_support_ticket,account.group_account_manager,1,0,0,0-->
</odoo>