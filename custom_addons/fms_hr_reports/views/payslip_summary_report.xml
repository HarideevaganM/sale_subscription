<odoo>
    <data>
        <record id="payslip_summary_report_merge_wizard_form" model="ir.ui.view">
            <field name='name'>payslip.summary.report.wizard.form</field>
            <field name='model'>payslip.summary.report.wizard</field>
            <field name='arch' type='xml'>
                <form string='Payslip Summary Report'>
                    <group>
                        <group>
                            <field name="date_start" required="1"/>
                            <field name="end_date" required="1"/>
                            <field name="filedata" filename="filename"/>
                            <field name="filename" invisible="1"/>

                        </group>
                    </group>
                    <footer>
                        <button name="get_report_order" type="object" class="oe_highlight" string="Print"/>

                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="payslip_summary_report_action_merge_wizard_form" model="ir.actions.act_window">
            <field name='name'>Payslip Summary Report</field>
            <field name='res_model'>payslip.summary.report.wizard</field>
<!--            <field name='view_type'>form</field>-->
            <field name='view_mode'>form</field>
            <field name="view_id" ref="payslip_summary_report_merge_wizard_form"/>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>

<!--
        <menuitem id="summary_reporting_menu"
                  name="Summary"
                  parent="hr_payroll_community.menu_hr_payroll_root"
                  sequence="100"/>
-->

        <menuitem
                id="payslip_summary_report_merge_wizard_menu"
                name="Payslip Summary Report"
                parent="bank_advice_report.reporting_menu"
                action="payslip_summary_report_action_merge_wizard_form"
                sequence="1"
        />
    </data>
</odoo>
