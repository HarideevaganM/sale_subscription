<odoo>
    <data>
        <template id="invoice_report_inherits" inherit_id="account.report_invoice_document">
            <!--<xpath expr="//div[@name='invoice_address']" position="attributes">
                <attribute name="style">font-size: 20px;</attribute>
            </xpath>-->
			<xpath expr="//h2//span[4]" position="replace">
                <span t-if="o.move_type == 'out_refund'">Customer Credit Note</span>
            </xpath>

            <xpath expr="//table[@name='invoice_line_table']" position="after">
               <span style="font-size:16px;">
                      <strong>In words:</strong>

                    <span t-esc="docs.convert_num_to_word(o)"></span>
                        Only
               </span>
            </xpath>
            <xpath expr="//h2/span[5]" position="replace">
                <span t-if="o.move_type == 'in_refund'">Vendor Debit Note</span>
            </xpath>

        </template>
    </data>
</odoo>
