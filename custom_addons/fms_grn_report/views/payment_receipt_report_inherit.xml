<odoo>
    <data>
        <template id="payment_receipt_report_inherits" inherit_id="account.report_payment_receipt_document">
            <xpath expr="//div/div/div[3]/div[2]" position="replace">
                <div t-if="o.ref" style="padding-left:435px;">
                    <strong>Invoice Reference:</strong>
                    <span t-field="o.ref"/>
                </div>
            </xpath>
            <xpath expr="//div/div[2]/div/t[2]" position="replace">
                <t t-if="o.partner_type == 'supplier'">
                    <strong>Customer:</strong>
                </t>
            </xpath>
            <xpath expr="//h3" position="replace">
                <h3 t-if="o.partner_type == 'supplier'" >
                    <strong>Supplier Payment</strong>
                </h3>
                <h3 t-if="o.partner_type != 'supplier'" >
                    <strong>Customer Payment</strong>
                </h3>
                <p style="font-size:15px;">
                    <strong>Voucher Ref No:</strong>
                    <span t-field="o.name"/>
                </p>
            </xpath>
            <xpath expr="//div/div/div" position="replace">

                    <div class="col-xs-12" t-if="o.date">
                        <strong>Payment Date:</strong>
                        <span t-field="o.date"/>
                    </div>

            </xpath>
            <xpath expr="//div/div/div[3]/div[2]" position="after">
                 <div t-if="o.payment_types" style="padding-left:435px;">
                     <strong>Payment Method:</strong>
                <span t-field="o.payment_types"/>
                 </div>
            </xpath>
            <xpath expr="//div/div/div[3]/div[2]" position="after">
                <div t-if="o.payment_ref" style="padding-left:435px;">

                <strong>Payment Reference:</strong>
                <span t-field="o.payment_ref"/>

                </div>
            </xpath>
            <xpath expr="//div/div/div[2]/div[2]" position="replace">
                <p></p>
            </xpath>
           <xpath expr="//table" position="after">
               <span style="font-size:16px;">
                      <strong>In words:</strong>
                    <span t-esc="convert_num_to_word(o)"></span>
                        Only
               </span>
            </xpath>
        </template>
    </data>
</odoo>