<odoo>
    <data>
        <template id="report_signature_document">
            <div class="row mt16">
                <div class="col-xs-12" style="color:white; !important;background-color:#ff5200;important;font-weight: 900;!important;height:28px;padding-top:3px;!important;">
                    SIGNATURES
                </div>
            </div>
             <div class="row">
                <div class="col-xs-4" style="border:1px solid black; !important; background-color:#dddddd;important;height:28px;padding-top:3px;!important;">
                    Employee’s Signature
                </div>
                <div class="col-xs-4" style="border:1px solid black; !important; background-color:#dddddd;important;height:28px;padding-top:3px;!important;">
                    Dep’t. Head / Manager ‘s Signature
                </div>
                <div class="col-xs-4" style="border:1px solid black; !important; background-color:#dddddd;important;height:28px;padding-top:3px;!important;">
                    HR Department Manager’s Signature
                </div>
            </div>
            <span t-set="company_id" t-value='request.env.user.company_id'/>
            <div class="row">
                <div class="col-xs-4 text-center" style="border-left:1px solid black; !important;">
                    <img t-attf-src="data:image/*;base64,{{company_id.emp_signature}}" width="180" height="70"/>
                </div>
                <div class="col-xs-4 text-center" style="border-left:1px solid black; !important;">
                    <img t-attf-src="data:image/*;base64,{{company_id.manager_signature}}" width="180" height="70"/>
                </div>
                <div class="col-xs-4 text-center" style="border-left:1px solid black; !important;border-right:1px solid black; !important;">
                    <img t-attf-src="data:image/*;base64,{{company_id.hr_signature}}" width="180" height="70"/>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4" style="border:1px solid black; !important; background-color:#dddddd;important;height:28px;padding-top:3px;!important;">
                    Date :  <span t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"></span>
                </div>
                <div class="col-xs-4" style="border:1px solid black; !important; background-color:#dddddd;important;height:28px;padding-top:3px;!important;">
                    Date :  <span t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"></span>
                </div>
                <div class="col-xs-4" style="border:1px solid black; !important; background-color:#dddddd;important;height:28px;padding-top:3px;!important;">
                    Date :  <span t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"></span>
                </div>
            </div>
        </template>

        <template id="report_employee_info_document">
            <div class="row">
                <div class="col-xs-12" style="color:white; !important;background-color:#ff5200;important;font-weight: 900;!important;height:28px;padding-top:3px;!important;">
                    EMPLOYEE INFORMATION
                </div>
            </div>
            <div class="row mt32 mb8">
                <div class="col-xs-2" style="padding-top:3px;!important;">Name :</div>
                <div class="col-xs-10" style="border:1px solid black;!important;height:28px;padding-top:3px;!important;">
                    <span t-esc="o.employee_id and o.employee_id.name"/>
                </div>
            </div>
            <div class="row mt8 mb8">
                <div class="col-xs-2" style="padding-top:3px;!important;">Job Title :</div>
                <div class="col-xs-4" style="border:1px solid black;!important;height:28px;padding-top:3px;!important;">
                    <span t-if="o.employee_id and o.employee_id.job_id" t-esc="o.employee_id.job_id.name"/>
                </div>
                <div class="col-xs-2" style="padding-top:3px;!important;">Joining Date:</div>
                <div class="col-xs-4" style="border:1px solid black;!important;height:28px;padding-top:3px;!important;">
                    <span t-if="o.employee_id and o.employee_id.joining_date" t-esc="o.employee_id.joining_date"/>
                </div>
            </div>
            <div class="row mt8 mb32">
                <div class="col-xs-2" style="padding-top:3px;!important;">Department:</div>
                <div class="col-xs-4" style="border:1px solid black;!important;height:28px;padding-top:3px;!important;">
                    <span t-esc="o.department_id and o.department_id.name"/>
                </div>
                <div class="col-xs-2" style="padding-top:3px;!important;">Manager:</div>
                <div class="col-xs-4" style="border:1px solid black;!important;height:28px;padding-top:3px;!important;">
                    <span t-if="o.employee_id and o.employee_id.parent_id" t-esc="o.employee_id.parent_id.name"/>
                </div>
            </div>
        </template>


        <template id="report_hr_leave_report_document">
            <t t-call="hr_work_from_home.hr_external_layout">
                <div class="page">
                    <div class="row">
                        <div class="col-xs-4">
                            <img src="/hr_leave_report/static/img/black_box.jpeg" width="250" height="120"/><br/>
                        </div>
                        <div class="col-xs-8" style="height:70px !important; color:white; !important;background-color:#ff5200;important;">
                            <h2 class="text-center" style="line-height:2.6;font-weight: 900;!important;">Sick Leave Form</h2>
                        </div>
                    </div>
                    <t t-call="hr_leave_report.report_employee_info_document" />
                    <div class="row">
                        <div class="col-xs-12" style="color:white; !important;background-color:#ff5200;important;font-weight: 900;!important;height:28px;padding-top:3px;!important;">
                            SICK LEAVE DETAILS
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12" style="background-color:#dddddd;important;border:1px solid black;!important;height:28px;padding-top:3px;!important;">
                            Sick Leave Period:
                        </div>
                    </div>
                    <div class="row mt32 mb32">
                        <div class="col-xs-1" style="padding-top:3px;!important;">From:</div>
                        <div class="col-xs-3" style="border:1px solid black;!important;height:28px;padding-top:3px;!important;">
                            <span t-esc="o.date_from"/>
                        </div>
                        <div class="col-xs-1" style="padding-top:3px;!important;">To:</div>
                        <div class="col-xs-3" style="border:1px solid black;!important;height:28px;padding-top:3px;!important;">
                            <span t-esc="o.date_to"/>
                        </div>
                        <div class="col-xs-2" style="padding-top:3px;!important;">No. of Days:</div>
                        <div class="col-xs-2" style="border:1px solid black;!important;height:28px;padding-top:3px;!important;">
                            <span t-esc="o.number_of_days_temp"/>
                        </div>
                    </div>
                    <div class="row mt32">
                        <div class="col-xs-12" style="background-color:#dddddd;important;border:1px solid black;!important;height:28px;padding-top:3px;!important;">
                            Type of Illness:
                        </div>
                    </div>
                     <div class="row">
                        <div class="col-xs-12" style="border:1px solid black;!important;min-height:60px;!important;max-height:auto;padding-top:3px;!important;border-top:none;">
                            <span t-esc="o.illness_type"/>
                        </div>
                    </div>
                    <div class="row mt32 mb32">
                        <div class="col-xs-12" style="background-color:#dddddd;important;border:1px solid black;!important;height:28px;padding-top:3px;!important;">
                            Medical Certificate:
                        </div>
                    </div>
                    <div class="row mt32 mb32">
                        <div class="col-xs-2">
                            <t t-if="o.is_certificate == 'yes'">
                                <input type="checkbox" checked="checked" style="height:20px; !important;width:20px;!important; border:1px solid black;!important;"/>  Yes
                            </t>
                            <t t-if="o.is_certificate != 'yes'">
                                <input type="checkbox" style="height:20px; !important;width:20px;!important; border:1px solid black;!important;"/>  Paid
                            </t>
                        </div>
                        <div class="col-xs-2">
                            <t t-if="o.is_certificate == 'no'">
                                <input type="checkbox" checked="checked" style="height:20px; !important;width:20px;!important; border:1px solid black;!important;"/>  No
                            </t>
                            <t t-if="o.is_certificate != 'no'">
                                <input type="checkbox" style="height:20px; !important;width:20px;!important; border:1px solid black;!important;"/>  No
                            </t>
                        </div>
                    </div>
                   <t t-call="hr_leave_report.report_signature_document" />
                </div>
            </t>
        </template>

        <template id="report_hr_leave_second_document">
            <t t-call="hr_work_from_home.hr_external_layout">
                <div class="page">
                    <div class="row">
                        <div class="col-xs-4">
                            <img src="/hr_leave_report/static/img/black_box.jpeg" width="250" height="120"/><br/>
                        </div>
                        <div class="col-xs-8" style="height:70px !important; color:white; !important;background-color:#ff5200;important;">
                            <h2 class="text-center" style="line-height:2.6;font-weight: 900;!important;">Leave Request Form</h2>
                        </div>
                    </div>
                    <t t-call="hr_leave_report.report_employee_info_document" />
                    <div class="row">
                        <div class="col-xs-12" style="color:white; !important;background-color:#ff5200;important;font-weight: 900;!important;height:28px;padding-top:3px;!important;">
                            LEAVE DETAILS
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12" style="background-color:#dddddd;important;border:1px solid black;!important;height:28px;padding-top:3px;!important;">
                           Date of Leave:
                        </div>
                    </div>
                    <div class="row mt8 mb8">
                        <div class="col-xs-1" style="padding-top:3px;!important;">From:</div>
                        <div class="col-xs-3" style="border:1px solid black;!important;height:28px;padding-top:3px;!important;">
                            <span t-esc="o.date_from"/>
                        </div>
                        <div class="col-xs-1" style="padding-top:3px;!important;">To:</div>
                        <div class="col-xs-3" style="border:1px solid black;!important;height:28px;padding-top:3px;!important;">
                            <span t-esc="o.date_to"/>
                        </div>
                        <div class="col-xs-2" style="padding-top:3px;!important;">No. of Days:</div>
                        <div class="col-xs-2" style="border:1px solid black;!important;height:28px;padding-top:3px;!important;">
                            <span t-esc="o.number_of_days_temp"/>
                        </div>
                    </div>
                    <div class="row mt16">
                        <div class="col-xs-12" style="background-color:#dddddd;important;border:1px solid black;!important;height:28px;padding-top:3px;!important;">
                            Reason of Leave Request: <span t-esc="o.name"/>
                        </div>
                    </div>
                    <div class="row mt16">
                        <div class="col-xs-12" style="background-color:#dddddd;important;border:1px solid black;!important;height:28px;padding-top:3px;!important;">
                            Contact address during leave (If out of UAE):
                        </div>
                    </div>
                     <div class="row">
                        <div class="col-xs-12" style="border:1px solid black;!important;min-height:60px;!important;max-height:auto;padding-top:3px;!important;border-top:none;">
                            <span t-esc="o.street"/>
                            <span t-esc="o.street2"/>
                            <span t-esc="o.city"/>
                            <span t-esc="o.state_id and o.state_id.name"/>
                            <span t-esc="o.add_zip"/>
                            <span t-esc="o.country_id and o.country_id.name"/>
                        </div>
                    </div>
                    <div class="row mb16">
                        <div class="col-xs-4" style="border:1px solid black; !important; background-color:#dddddd;important;height:28px;padding-top:3px;!important;border-top:none;">
                            Contact No.:
                        </div>
                        <div class="col-xs-8" style="border:1px solid black; !important;height:28px;padding-top:3px;!important; border-top:none;">
                            <span t-esc="o.contact_no"/>
                        </div>
                    </div>
                    <div class="row mt8 mb32">
                        <div class="col-xs-12">
                            <strong>Note</strong> : <span>Any changes to the date by either applicant or manager must be signed and initialed by both.</span>
                        </div>
                    </div>
                    <div class="row mt16">
                        <div class="col-xs-12" style="color:white; !important;background-color:#ff5200;important;font-weight: 900;!important;height:28px;padding-top:3px;!important;">
                            RESUME DUTY ON
                        </div>
                    </div>
                    <div class="row" style="border:1px solid black;">
                        <div class="col-xs-12">
                            <div class="row mt16 mb16">
                                <div class="col-xs-7" style="height:28px;padding-top:3px;!important;">
                                  Note: The application hereby confirms that he/she must resume duty on:
                                </div>
                                <div class="col-xs-5" style="height:28px;padding-top:3px;!important;border-bottom:1px dotted black;">
                                    <span t-esc="o.duty_date"/>
                                </div>
                            </div>
                            <div class="row mt16 mb32">
                                <div class="col-xs-12" style="height:28px;padding-top:3px;!important;">
                                  If for any reason he/she reports late to work, the Company has the liberty to take any action to protect itself including cancellation of his/her contract.<br/>
                                </div>
                            </div>
                            <div class="row mt16 mb16">
                                <div class="col-xs-3" style="height:28px;padding-top:3px;!important;">Employee’s Signature:</div>
                                <div class="col-xs-3" style="height:28px;padding-top:3px;!important;border-bottom:1px dotted black;"></div>
                                <div class="col-xs-3" style="height:28px;padding-top:3px;!important;">Date Filed:</div>
                                <div class="col-xs-3" style="height:28px;padding-top:3px;!important;border-bottom:1px dotted black;">
                                <span t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"/></div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt8">
                        <div class="col-xs-12" style="color:white; !important;background-color:#ff5200;important;font-weight: 900;!important;height:28px;padding-top:3px;!important;">
                            TO BE COMPLETED BY THE HR/ADMIN. DEPARTMENT
                        </div>
                    </div>
                    <div class="row" style="border:1px solid black;">
                        <div class="col-xs-12">
                            <div class="row mt16 mb16">
                                <div class="col-xs-4" style="height:28px;padding-top:3px;!important;">
                                  Balance available prior to this request:
                                </div>
                                <div class="col-xs-2" style="height:28px;padding-top:3px;!important;border-bottom:1px dotted black;">
                                    <span t-esc="o.balance_available"/>
                                </div>
                                <div class="col-xs-4" style="height:28px;padding-top:3px;!important;">
                                  Balance remaining after this leave:
                                </div>
                                <div class="col-xs-2" style="height:28px;padding-top:3px;!important;border-bottom:1px dotted black;">
                                    <span t-esc="o.balance_leave"/>
                                </div>
                            </div>
                            <div class="row mt16 mb16">
                                <div class="col-xs-4" style="height:28px;padding-top:3px;!important;">
                                  Ticket Eligibility:
                                </div>
                                <div class="col-xs-2">
                                    <t t-if="o.ticket_eligibility == 'yes'">
                                        <input type="checkbox" checked="checked" style="height:20px; !important;width:20px;!important; border:1px solid black;!important;"/>  Yes
                                    </t>
                                    <t t-if="o.ticket_eligibility != 'yes'">
                                        <input type="checkbox" style="height:20px; !important;width:20px;!important; border:1px solid black;!important;"/>  Paid
                                    </t>
                                </div>
                                <div class="col-xs-2">
                                    <t t-if="o.ticket_eligibility == 'no'">
                                        <input type="checkbox" checked="checked" style="height:20px; !important;width:20px;!important; border:1px solid black;!important;"/>  No
                                    </t>
                                    <t t-if="o.ticket_eligibility != 'no'">
                                        <input type="checkbox" style="height:20px; !important;width:20px;!important; border:1px solid black;!important;"/>  No
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>

                   <t t-call="hr_leave_report.report_signature_document" />
                </div>
            </t>
        </template>

        <template id="report_hr_leave_report_extended">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="hr_leave_report.report_hr_leave_report_document" />
                </t>
            </t>
        </template>

        <template id="report_hr_leave_second_extended">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="hr_leave_report.report_hr_leave_second_document" />
                </t>
            </t>
        </template>
    </data>
</odoo>