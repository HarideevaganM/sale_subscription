<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_import_export_res_company" model="ir.ui.view">
        <field name="name">inherit.res.company.view</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Device Intregration">
                    <div>
                        <p class="text-muted">Credentials</p>
                    </div>
                    <div>
                        <p class="text-muted">Token : https://uaeservices2.fms-tech.com/bbiswebapi/api/jwt/access</p>
                        <p class="text-muted">Result: https://uaeservices2.fms-tech.com/BBISWebAPI/api/getdata/getCsvResult</p>
                    </div>
                    <group>
                        <button name="generate_token" type="object" string="Generate Token"/>
                    </group>
                    <group>
                        <group string="Token Info">
                            <field name="url" widget="url"/>
                            <field name="user_name"/>
                            <field name="password" password="True"/>
                            <field name="token"/>
                        </group>
                         <group string="Filters">
                            <field name="filters"/>
                            <field name="predicate" placeholder="String or date (yyyy/mm/dd)"/>
                            <field name="param"/>
                            <field name="sign"/>
                            <field name="order_by"/>
                            <field name="topclause"/>
                        </group>
                        <group string="Result Info">
                            <field name="result_url" widget="url"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>