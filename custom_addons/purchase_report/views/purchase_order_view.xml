<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_inherit_report" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']" position="after">
               <field name="shipped_vai"/>
               <field name="fob_point"/>
            </xpath>
            <field name="amount_tax" position="after">
                <field name="shoping" attrs="{'readonly': [('state', '=', 'purchase')]}"/>
                <field name="other" attrs="{'readonly': [('state', '=', 'purchase')]}"/>
            </field>
        </field>
    </record>

    <record id="fms_purchase_order_form_inherit_picking" model="ir.ui.view">
        <field name="name">purchase.order.fms.job.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="odoo_job_costing_management.purchase_order_form_inherit_picking"/>
        <field name="arch" type="xml">
            <field name="picking_id" position="attributes">
                <attribute name='invisible'>1</attribute>
            </field>
        </field>
    </record>

    <record id="fms_purchase_order_line_form_inherit_picking" model="ir.ui.view">
        <field name="name">purchase.order.line.job.center.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="odoo_job_costing_management.purchase_order_job_costing_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='job_cost_id']" position="attributes">
                <attribute name='invisible'>1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='job_cost_line_id']" position="attributes">
                <attribute name='invisible'>1</attribute>
            </xpath>
        </field>
    </record>

    <record id="fms_account_invoice_job_cost_form" model="ir.ui.view">
        <field name="name">fms.account_invoice.inherit.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="odoo_job_costing_management.account_invoice_job_cost_form"/>
        <field name="arch" type="xml">
            <xpath expr = "//field[@name='invoice_line_ids']/tree/field[@name='job_cost_id']" position="attributes">
                <attribute name='invisible'>1</attribute>
            </xpath>
            <xpath expr = "//field[@name='invoice_line_ids']/tree/field[@name='job_cost_line_id']" position="attributes">
                <attribute name='invisible'>1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
