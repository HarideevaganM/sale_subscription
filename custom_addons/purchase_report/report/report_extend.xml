<odoo>
    <data>

        <template id="extended_layout_po_clean">
            <div class="article o_report_layout_standard">
                <t t-raw="0" />
            </div>
            <div class="footer">
                <div name="financial_infos">
                    <span t-field="company.report_footer"/>
                </div>
                <div class="text-center" style="border-top: 1px solid black;">
                    <p>Should you have any enquiries concerning this PO, please call Operation department at + 971 2 555 4991</p>
                    <p>Thank you for your business!</p>
                </div>
            </div>
        </template>


        <template id="purchase_external_layout">
            <!-- Multicompany -->
            <t t-if="not o and doc">
                <t t-set="o" t-value="doc"/>
            </t>

            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>
            <t t-call="purchase_report.extended_layout_po_clean"><t t-raw="0"/></t>
        </template>
    </data>
</odoo>