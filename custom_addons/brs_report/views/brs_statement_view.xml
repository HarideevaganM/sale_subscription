<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
<!--
        Bank reconcile
-->

        <record id="view_brs_reconcile_home_form" model="ir.ui.view">
            <field name="name">view.brs.reconcile.home.form</field>
            <field name="model">brs.reconcile</field>
            <!--          <field name="view_type">form</field>-->
            <field name="arch" type="xml">  
                <form string="Bank reconcile">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="active"/>
                            <field name="company_id"/>
                        </group>
                        <field name="brs_reconcile_line" widget="one2many_list">
                            <tree string="reconcile Line" editable="bottom">
                                <field name="journal_id" domain="[('type','=','bank')]"/>
                            </tree>    
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_brs_reconcile_home_tree" model="ir.ui.view">
            <field name="name">view.brs.reconcile.home.tree</field>
            <field name="model">brs.reconcile</field>
            <field name="arch" type="xml">  
                <tree string="Bank reconcile">
                    <field name="name"/>                                                                                                                                                                                                                                                                                                 
                </tree>
            </field>
        </record>

        <record id="action_brs_reconcile_home" model="ir.actions.act_window">
            <field name="name">BRS</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">brs.reconcile</field>
            <!--          <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

        <menuitem id="menu_bank_statement_home" parent="account.menu_finance" sequence="4" name="Bank Statement"/>      
        <menuitem id="menu_journal_brs" parent="brs_report.menu_bank_statement_home" action="action_brs_reconcile_home" sequence="1" name="BRS Journal"/>


<!--
        BRS Statement
-->

        <record id="view_brs_statement_form" model="ir.ui.view">
            <field name="name">view.brs.statement.form</field>
            <field name="model">brs.statement</field>
            <field name="arch" type="xml">
                <form string="BRS">
                    <header>
                        <button name="generate" type="object" string="Generate" class="oe_highlight" states="draft"/>
                        <button name="validate" type="object" string="Validate" class="oe_highlight" states="progress" />  
                        <button name="cancel" type="object" string="Cancel" class="oe_highlight" states="progress"/>  
                        <button name="reset_to_draft" type="object" string="Reset To Draft" class="oe_highlight" states="cancel"/>  
                        <button name="unreconcile" type="object" string="Unreconcile" class="oe_highlight" states="reconcile"/>  
                        <button name="done" type="object" string="Done" class="oe_highlight" states="reconcile"/>  
                        <field name="state" widget="statusbar" statusbar_visible="progress,draft,done" statusbar_colors="{'draft':'red'}"/>
                    </header>
                    <group>                         
                        <group>
                            <field name="brs_id" attrs="{'readonly': [('state','=','done')]}" domain="[('company_id','=',company_id)]"/>                               
                            <field name="from_date" attrs="{'readonly': [('state','=','done')]}"/>
                            <field name="to_date" attrs="{'readonly': [('state','=','done')]}"/> 
                            <field name="bank_balance" attrs="{'readonly': [('state','=','done')]}" invisible="0"/>                                                            
                            <field name="opening_balance" attrs="{'readonly': [('state','=','done')]}" invisible="0"/>                                                        
                            <button name="select_all" type="object" icon="fa-check" class ="oe_inline oe_stat_button" string="Select All" states="progress"/>
                            <button name="un_select_all" type="object" icon="fa-check" class ="oe_inline oe_stat_button" string="Unselect All" states="done"/>
                        </group>
                        <group>
                            <field name="unreconcile_balance" readonly="1"/>
                            <field name="unreconcile_balance_book" readonly="1"/>
                            <field name="unreconcile_sys_balance" readonly="1"/>
                            <field name="debit" readonly="1"/>
                            <field name="credit" readonly="1"/>
                            <field name="unreconcile_debit" invisible="0"/>
                            <field name="unreconcile_credit" invisible="0"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="statement_line" string="Account Entry">
                            <field name="statement_line" widget="one2many_list">
                                <tree create="false" delete="false" editable="bottom">
                                    <field name="brs_id" invisible="1"/>                        
                                    <field name="move_id" invisible="1"/> 
                                    <field name="un_select" attrs="{'readonly': [('reconcile','=',False)]}"/>                           
                                    <field name="date" readonly="1"/>                           
                                    <field name="cheque" readonly="1"/>
                                    <field name="partner_id" readonly="1"/>
                                    <field name="description" readonly="1"/>
                                    <field name="balance" readonly="1"/>
                                    <field name="credit" readonly="1"/>
                                    <field name="reconcile" attrs="{'readonly': [('state','=','done')]}"/>
                                    <field name="reconcile_date" attrs="{'required': [('reconcile','=',True)],'readonly': [('state','=','done')]}"/>
                                    <field name="state" invisible="1"/>
                                </tree>
                                <form string="Tool Details">
                                    <group col="4">
                                        <field name="cheque"/>
                                        <field name="date"/>
                                        <field name="balance"/>
                                        <field name="credit"/>
                                    </group>
                                </form>
                            </field>
                        </page>  
                    </notebook>        
                </form>
            </field>
        </record>

        <record id="view_brs_statement_tree" model="ir.ui.view">
            <field name="name">view.brs.statement.tree</field>
            <field name="model">brs.statement</field>
            <field name="arch" type="xml">
                <tree string="BRS">
                    <field name="brs_id"/>
                    <field name="to_date"/>
                    <field name="unreconcile_balance"/>
                    <field name="bank_balance"/>
                    <field name="opening_balance"/>
                    <field name="debit"/>
                    <field name="credit"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_brs_statement" model="ir.actions.act_window">
            <field name="name">BRS Statement</field>
            <field name="res_model">brs.statement</field>
            <!--          <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click here to define a BRS Statement.
                </p><p>
                Create BRS Statement
                </p>
            </field>
        </record>

        <menuitem id="menu_brs_statement" action="action_brs_statement" name="BRS Statement" parent="brs_report.menu_bank_statement_home" sequence="2"/> 


<!--
        Account Move
-->

        <record id="view_inherit_account_moves_inherit_brs" model="ir.ui.view">
            <field name="name">view.account.move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml"> 
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="reconcile" invisible="1"/>
                    <field name="bank_date" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="is_consolidated" invisible="1"/>
                    <field name="consolidate_cheque_no" attrs="{'invisible': [('is_consolidated','=',False)],'required':[('is_consolidated','=',True)],'readonly': [('state','=','posted')]}"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
