<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
<!--        Accrual process screen-->
        <record id="accrual_process_form_view" model="ir.ui.view">
            <field name="name">accrual.process.form.view</field>
            <field name="model">accrual.process</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>

                        <field name="employee_ids" attrs="{'invisible':[('all_employees','=', True)]}">
                            <tree string="Process Accrual Leaves" edit="false">
                                <field name="name"/>
                                <field name="department_id"/>
                                <field name="job_id"/>
                                <field name="working_branch"/>
                            </tree>
                        </field>

                        <group>
                            <group>
                                <field name="all_employees"/>
                                <field name="date_from" attrs="{'invisible':[('is_allocation_per_year', '=', True), '|', ('emp_len', '!=', 1), ('all_employees', '=', True)], 'required':[('is_allocation_per_year','!=', True)]}"/>
                                <!--<field name="date_to" attrs="{'invisible':[('is_allocation_per_year', '=', True), ('emp_len', '!=', 1)], 'required':[('is_allocation_per_year','!=', True)]}"/>-->
                                <field name="year" attrs="{'invisible':[('is_allocation_per_year', '!=', True), ('emp_len', '&lt;=', 1), ('all_employees', '!=', True)]}"/>
                                <field name="name"/>
                                <field name="is_allocation_per_year" invisible="1"/>
                                <field name="emp_len" invisible="1"/>
                            </group>
                            <group>
                                <!--<field name="month"/>-->
                                <field name="leave_type"/>
                                <field name="value"/>
                            </group>
                        </group>
                        <footer>
                            <button name="create_accrual_process" string="Process" type="object" class="oe_right oe_highlight"/>
                            <button string="Close" class="btn-default" special="cancel" />
                        </footer>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="actions_accrual_process" model="ir.actions.act_window">
            <field name="name">Process Leaves</field>
            <field name="res_model">accrual.process</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="accrual_process_form_view"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_accrual_process"
              name="Process Leaves"
              action="actions_accrual_process"
              parent="hr_holidays.menu_hr_holidays_my_leaves"
              sequence="90"
              groups="hr_holidays.group_hr_holidays_manager"/>
    </data>
</odoo>