<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <report id="year_wise_leave_report"
        model="leave.report.wizard"
        string="Year Wise Leave Report"
        report_type="qweb-pdf"
        file="bbis_hr.year_wise_leave_report1"
        name="bbis_hr.year_wise_leave_report1"
        menu="False"
    />

    <template id="year_wise_leave_report_document">
        <div class="header">
            <div class="bbis-company-header clear-fix">
                <img class="bbis-company-logo" style="height:100px; width:auto;" src="/bbis_reports/static/src/img/blackbox-logo.svg" alt="Logo"/>
                <div class="bbis-company-details">
                    <h1 class="text-uppercase" style="margin:0; font-size:22pt"><strong>Leave Report</strong></h1>
                    <div>
                        <span t-if="date == 'this_year'" t-esc="'This Year'"/>
                        <span t-elif="date == 'last_year'" t-esc="'Last Year'"/>
                        <span t-else=""  t-esc="'Employee Anniversary'">
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="article o_report_layout_standard">
            <div class="page">
                <table class="bbis-accounting-report-table1 row-striped" t-att-style="table1_width">
                    <th>Employee Name</th>
                    <th>Leave Type</th>
                    <th>Available Days</th>
                    <th>Leaves Accrued</th>
                    <th>Leaves Taken</th>
                    <th>Leave Balance</th>
                    <tbody>
                        <t t-foreach="data" t-as="data">
                            <tr>
                                <td>
                                    <span t-esc="data['employee_name']"></span>
                                </td>
                                <td>
                                    <span t-esc="data['leave_type']"></span>
                                </td>
                                <td>
                                    <span t-esc="data['available_days']"></span>
                                </td>
                                <td>
                                    <span t-esc="data['leaves_accrued']"></span>
                                </td>
                                <td>
                                    <span t-esc="data['leaves_taken']"></span>
                                </td>
                                <td>
                                    <span t-esc="data['leave_balance']"></span>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="footer">
            <t t-call="bbis_reports.bbis_custom_sale_footer"/>
        </div>
    </template>

    <template id="year_wise_leave_report1">
        <t t-call="web.html_container">
            <t t-call="bbis_hr.year_wise_leave_report_document"/>
        </t>
    </template>

</odoo>

