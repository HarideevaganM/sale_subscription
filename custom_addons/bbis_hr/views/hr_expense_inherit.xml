<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="bbis_hr_expense_inherit" model="ir.ui.view">
        <field name="name">hr.expense.inherit</field>
        <field name="model">hr.expense</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_id']" position="attributes">
                <attribute name="groups">account.group_account_invoice</attribute>
            </xpath>
            <xpath expr="//field[@name='sale_order_id']" position="attributes">
                <attribute name="groups">account.group_account_invoice</attribute>
            </xpath>
            <xpath expr="//field[@name='analytic_account_id']" position="attributes">
                <attribute name="groups">account.group_account_invoice</attribute>
            </xpath>

            <xpath expr="//field[@name='analytic_account_id']" position="after">
                <field name="work_outside_id" invisible="True"/>
            </xpath>

            <xpath expr="//button[@name='submit_expenses']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>


            <xpath expr="//button[@name='submit_expenses']" position="after">
                <button name="submit_expenses_sudo" type="object" string="Create Expenses Sheet" class="oe_highlight"
                        groups="account.group_account_manager" attrs="{'invisible': [('submitted_to_hr', '!=', 2)]}"/>
            </xpath>


            <xpath expr="//field[@name='tax_ids']" position="attributes">
                <attribute name="groups">base.group_user</attribute>
            </xpath>

            <xpath expr="//field[@name='tax_ids']" position="after">
                <field name="submitted_to_hr" invisible="1"/>
            </xpath>

            <xpath expr="//button[@name='submit_expenses']" position="after">
                <button name="submit_to_hr" attrs="{'invisible':[('submitted_to_hr','!=', 0)]}" string="Submit To HR" type="object" groups="base.group_user" class="oe_highlight o_expense_sheet_approve"/>
            </xpath>

            <xpath expr="//button[@name='submit_to_hr']" position="after">
                <button name="submit_to_accounting" attrs="{'invisible':[('submitted_to_hr','!=', 1)]}" string="Submit To Accounting" type="object" groups="hr.group_hr_manager" class="oe_highlight o_expense_sheet_approve"/>
            </xpath>

            <button name="action_get_attachment_view" position="after">
                <button name="action_view_work_request" class="oe_stat_button" icon="fa-tasks" type="object"
                        attrs="{'invisible':[('work_outside_id', '=', False)]}" groups="hr.group_hr_manager">
                    <span>Work Request</span>
                </button>
            </button>

        </field>
    </record>

    <!-- remove domain for user id since it is already handled in record rules -->
    <record id="hr_expense.action_hr_expense_sheet_my_refused" model="ir.actions.act_window">
        <field name="domain">[('state', '=', 'cancel')]</field>
    </record>

    <!-- remove domain for user id since it is already handled in record rules -->
    <record id="hr_expense.action_hr_expense_sheet_my_all" model="ir.actions.act_window">
        <field name="domain">[('state', '!=', 'cancel')]</field>
    </record>

    <!-- replace name to create expense sheet -->
    <record id="hr_expense.hr_expense_submit_action_server" model="ir.actions.server">
        <field name="name">Expense: Create Expense Sheet</field>
        <field name="groups">account.group_account_manager</field>
    </record>

    <!-- change action filter by employee user id -->
    <record id="hr_expense.hr_expense_actions_my_unsubmitted" model="ir.actions.act_window">
        <field name="domain">[]</field>
    </record>

</odoo>