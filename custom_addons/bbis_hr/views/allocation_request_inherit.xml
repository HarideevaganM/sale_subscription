<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--Adding the created date field in allocation request-->
    <record id="bbis_allocation_request_inherit" model="ir.ui.view">
        <field name="name">allocation.request.inherit</field>
        <field name="model">hr.holidays</field>
        <field name="inherit_id" ref="hr_holidays.view_hr_holidays_filter"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <group string="Group By">
                    <filter name = "create_date" string="Created Date" context="{'group_by':'create_date'}"/>
                </group>
            </field>
        </field>
    </record>
</odoo>