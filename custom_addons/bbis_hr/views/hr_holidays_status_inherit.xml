<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--    # Add the limit days in leave type. This is the maximum limit of leaves for an employee in the anniversary.-->
    <record id="bbis_hr_holiday_status_inherit_form" model="ir.ui.view">
        <field name="name">hr.holiday.status.inherit.form</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form" />
        <field name="model">hr.holidays.status</field>
        <field name="arch" type="xml">
            <field name="limit" position="after">
                <field name="is_annual"/>
                <field name="days_carry_over" attrs="{'invisible':[('is_annual', '!=', True)]}"/>
                <field name="days_per_month"/>
                <field name="days_per_year"/>
                <field name="is_allocation_per_year"/>
            </field>

            <field name="double_validation" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="limit" position="attributes">
                <attribute name="string">No Balance Limit</attribute>
            </field>
        </field>
    </record>

</odoo>