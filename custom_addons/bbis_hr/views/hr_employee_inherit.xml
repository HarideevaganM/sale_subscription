<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="bbis_hr_employee_branch_form_view" model="ir.ui.view">
        <field name="name">hr.employee.branch.form.view</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <field name="department_id" position="after">
                <field name="working_branch" string="Office Location"/>
                <field name="hr_private_id" string="HR Private ID" invisible="1"/>
            </field>
            <!--Add a new boolean field in employee screen for marking the employee is on leave.-->
            <field name="resource_calendar_id" position="after">
                <field name="is_on_leave" group="hr.group_hr_manager"/>
            </field>
            <field name="user_id" position="after">
                <field name="address_home_id"/>
            </field>
        </field>
    </record>
</odoo>