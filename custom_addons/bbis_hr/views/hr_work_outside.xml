<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_hr_work_outside_tree" model="ir.ui.view">
        <field name="name">hr.work.outside.tree</field>
        <field name="model">hr.work.outside</field>
        <field name="arch" type="xml">
            <tree string="Period" decoration-success="state=='approve'">
                <field name="employee_id"/>
                <field name="no_of_days"/>
                <field name="phone"/>
                <field name="reason_work_from_home"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_work_outside_form" model="ir.ui.view">
        <field name="name">hr.work.outside.form</field>
        <field name="model">hr.work.outside</field>
        <field eval="12" name="priority"/>
        <field name="arch" type="xml">
            <form string="Period Lock">
                <header>
                    <button name="action_submit" string="Submit" states='draft' type="object" class="oe_highlight"/>
                    <button name="action_approve" string="Approve" states='submit' type="object" class="oe_highlight" groups='hr.group_hr_manager'/>
                    <button name="action_expense" string="Add Expense" states='submit,approve' type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_expenses_entries" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible':[('count_expense', '=', 0)]}">
                        <field name="count_expense" widget="statinfo" string="Expenses"/>
                        </button>
                    </div>

                    <group string="Employee Details">
                        <group>
                            <field name="employee_id" required="1" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="from_date" required="1"/>
                            <field name="no_of_days"/>
                        </group>
                        <group>
                            <field name="to_date" required="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Address Details">
                            <group>
                                <group>
                                    <label string="Remote Address"/>
                                    <div class="o_address_format">
                                        <field name="street" placeholder="Street..." class="o_address_street" required='1'/>
                                        <field name="street2" placeholder="Street 2..." class="o_address_street" />
                                        <field name="city" placeholder="City" class="o_address_city" required='1' />
                                        <field name="state_id" class="o_address_state" placeholder="State"/>
                                        <field name="add_zip" placeholder="ZIP" class="o_address_zip"/>
                                        <field name="country_id" placeholder="Country" class="o_address_country" required='1'/>
                                    </div>
                                </group>
                                <group>
                                    <field name="phone" required="1"/>
                                </group>
                            </group>
                            <field name="reason_work_from_home" placeholder="Reason..."/>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                 </div>
            </form>
        </field>
    </record>

    <!-- remove readonly for hr manager -->
    <record id="view_hr_work_outside_form_manager" model="ir.ui.view">
        <field name="name">hr.work.outside.form.manager</field>
        <field name="model">hr.work.outside</field>
        <field name="groups_id" eval = "[(4, ref ('hr.group_hr_manager'))]" />
        <field name="inherit_id" ref="bbis_hr.view_hr_work_outside_form"/>
        <field name="arch" type="xml">
            <field name="employee_id" position="attributes">
                <attribute name="readonly">0</attribute>
            </field>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_work_request_outside">
        <field name="name">Submit Outside Work Request</field>
        <field name="res_model">hr.work.outside</field>
        <!--          <field name="view_type">form</field>-->
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_work_from_outside_new"
              name="Outside Work"
              action="action_work_request_outside"
              parent="hr_work_from_home.menu_hr_work_home_main"
              sequence="2"/>
</odoo>