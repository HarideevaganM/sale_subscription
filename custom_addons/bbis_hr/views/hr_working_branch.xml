<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record model="ir.ui.view" id="hr_working_branch_form">
            <field name="name">HR Working Branch Form</field>
            <field name="model">hr.working.branch</field>
            <field name="arch" type="xml">
                <form string="Working Branch Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <group string="Day Off">
                            <field name="monday"/>
                            <field name="tuesday"/>
                            <field name="wednesday"/>
                            <field name="thursday"/>
                            <field name="friday"/>
                            <field name="saturday"/>
                            <field name="sunday"/>
                        </group>
                    </group>
                </sheet>
            </form>
            </field>
        </record>
  </data>
</odoo>