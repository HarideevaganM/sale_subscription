<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="message_work_from_home">
            <div style="font-style:Arial; font-size: 14px;">
                <p>Dear <t t-esc="next_approve"/>,</p>
                <t t-if="mail_to == 'ceo_approve'">
                    <p>This is to notify you that the Work From Home Request has been approved by CEO.</p>
                </t>
                <t t-else="">
                    <t t-if="mail_to == 'refused'">
                        <t t-if="refused_user == 'emp'">
                            <p>This is to notify you that Work From Home Request has been refused by <t t-esc="refused_user"/>.</p>
                        </t>
                        <t t-else="">
                            <p>This is to notify you that Work From Home Request submitted by <t t-esc="object.employee_id.name"/> has been refused by <t t-esc="refused_user"/>.</p>
                        </t>
                    </t>
                    <t t-elif="mail_to == 'officer'">
                        <p>This is to notify you that Work From Home Request has been submitted by <t t-esc="object.employee_id.name"/>.</p>
                    </t>
                    <t t-else="">
                        <p>You have been assigned to the approval of Work From Home Request submitted by <t t-esc="object.employee_id.name"/>.</p>
                    </t>
                </t>
                <p>
                   <t t-if="mail_to == 'ceo_approve'">
                       Requester : <t t-esc="object.employee_id.name"/><br/>
                   </t>
                   From Date : <t t-esc="object.from_date"/><br/>
                   To Date : <t t-esc="object.to_date"/><br/>
                   No:Of Days : <t t-esc="object.no_of_days"/><br/>
                   Reason : <t t-esc="object.reason_work_from_home"/>
                </p>
                <br/>
                <p>
                    <a href="/web#id=${object.id}&amp;view_type=form&amp;model=hr.work.home"
                    style="background-color: #2c286c; border: 10px solid #2c286c; text-decoration: none; color: #fff; font-size: 14px;">
                    View Work Request</a>
                </p>
                <t t-call="bbis_hr.hr_default_email_footer"/>
            </div>
        </template>

    </data>
</odoo>