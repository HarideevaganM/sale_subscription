<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">

        <!-- Scheduler for automatically processing the annual leave accrual. (Now the value is 2.5)-->
        <record id="accrual_process_scheduler" model="ir.cron">
            <field name="name">Accrual Process Scheduler</field>
            <field name="model_id" ref="model_hr_holidays"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.create_accruals()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>

        <!-- Scheduler for reset  the leave boolean value in employee table-->
        <record id="employee_reset_leaves" model="ir.cron">
            <field name="name">Employee Reset Leaves</field>
            <field name="model_id" ref="model_hr_holidays"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.process_reset_leaves()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>

        <!-- Scheduler for sending the mail  to hr after 1 day of not approval-->
        <record id="non_approved_leaves_process" model="ir.cron">
            <field name="name">Non Approved Leave Process</field>
            <field name="model_id" ref="model_hr_holidays"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.create_non_processed_leaves()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>

    </data>
</odoo>