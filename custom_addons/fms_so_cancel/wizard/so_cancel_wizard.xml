<odoo>
    <record id="view_sale_cancel_inv" model="ir.ui.view">
            <field name="name">Reason for Cancellation</field>
            <field name="model">sale.advance.cancel.inv</field>
            <field name="arch" type="xml">
                <form string="Reason For Cancellation">
                    <p class="oe_grey">
                        Reason for Cancellation
                    </p>
                    <sheet>
                        <group>
                            <field name="order_id" invisible="1"/>
                            <field name="cancellation_reason" required="1"/>
                        </group>
                        <footer>
                            <button name="update_details" string="Update" type="object" class="oe_highlight"/>
                            or
                            <button string="Cancel" class="oe_link" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

    <record id="action_view_sale_cancel_inv" model="ir.actions.act_window">
            <field name="name">Reason for Cancellation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.advance.cancel.inv</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="target">new</field>

        </record>
</odoo>