<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_inherit_fianace_manger_company_id" model="ir.ui.view">
            <field name="name">res.company.fianace.manager.inherit</field>
            <field name="model">res.company</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="hr_work_from_home.res_inherit_company_id"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='hr_signature']" position="after">
                    <field name="fianace_signature" widget="image" class="oe_avatar"/>
                </xpath>
            </field>
        </record>

        <record id="other_settlements_tree" model="ir.ui.view">
            <field name="name">other.settlements.tree</field>
            <field name="model">other.settlements</field>
            <field name="arch" type="xml">
                <tree string="Employee Gratuity">
                    <field name ="name"/>
                    <field name ="employee_name"/>
                    <field name ="total_payable_amount" sum="Total" widget="monetary" />
                    <field name="currency_id" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name ="state"/>
                </tree>
            </field>
        </record>

        <record id="other_settlements_form" model="ir.ui.view">
            <field name="name">other.settlements.form</field>
            <field name="model">other.settlements</field>
            <field name="arch" type="xml">
                <form string="Employee Settlements">
                    <header>
                         <button name="validate_function" type="object" string="Validate" class="oe_highlight" states="draft"/>
                         <button name="approve_function" type="object" string="Confirm" class="oe_highlight" states="validate"/>
                         <button name="cancel_function" type="object" string="Cancel" states="draft,validate"/>
                        <button name="draft_function" type="object" string="Set to Draft" states="cancel"/>

                         <field name="state" widget="statusbar"   statusbar_visible="draft,validate,approve"/>
                    </header>
                        <sheet>
                            <div class="oe_title">
                                <h1>
                                    <field name="name" readonly="1"/>
                                </h1>
                            </div>
                                <group>
                                    <group>
                                        <field name ="employee_name"  string="Employee" required="True" attrs="{'readonly': [('state','=','approve')]}"/>
                                        <field name ="employee_dept"  required="True" attrs="{'readonly': [('state','=','approve')]}"/>
                                        <field name ="employee_job_id" required="True" attrs="{'readonly': [('state','=','approve')]}"/>
                                    </group>
                                    <group>
                                        <field name="joined_date" required="True" attrs="{'readonly': [('state','=','approve')]}"/>
                                        <field name="last_date" required="True" attrs="{'readonly': [('state','=','approve')]}"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="type_of_contract" required="True" attrs="{'readonly': [('state','=','approve')]}" widget="radio" options="{'horizontal':true}"/>
                                         <field name="basic_salary" attrs="{'readonly': [('state','=','approve')]}"/>
                                    </group>
                                    <group>
                                        <field name="reason" required="True" attrs="{'readonly': [('state','=','approve')]}" widget="radio" options="{'horizontal':true}"/>
                                        <field name="last_month_salary" attrs="{'readonly': [('state','=','approve')]}"/>
                                    </group>
                                    <group>
                                        <field name="worked_years"  attrs="{'readonly': [('state','=','approve')]}"/>
                                        <field name="notice_period"  attrs="{'readonly': [('state','=','approve')]}"/>
                                    </group>
                                    <group>
                                        <field name="leave_balance"  attrs="{'readonly': [('state','=','approve')]}"/>
                                        <field name="ticket_allowance"  attrs="{'readonly': [('state','=','approve')]}" widget="radio" options="{'horizontal':true}"/>
                                    </group>
                                </group>
                                <notebook>
                                    <page string="Computation">
                                        <group string='Gratuity'/>
                                            <field name="gratuity_ids">
                                                <tree editable="none">
                                                    <field name='gratuity_id' options="{'no_create': True, 'no_edit': True }" required='1' domain="[]"/>
                                                    <field name="daily_wage"/>
                                                    <field name="worked_years"/>
                                                    <field name="calculation"/>
                                                    <field name="total"/>
                                                </tree>
                                            </field>
                                        <group string='Leaves'/>
                                            <field name="leave_ids">
                                                <tree editable="none">
                                                    <field name="daily_wage"/>
                                                    <field name="balance"/>
                                                    <field name="calculation"/>
                                                    <field name="total"/>
                                                </tree>
                                            </field>
                                        <group string='Tickets'/>
                                            <field name="ticket_ids">
                                                <tree editable="none">
                                                    <field name="destination"/>
                                                    <field name="journey_date"/>
                                                    <field name="total"/>
                                                </tree>
                                            </field>
                                    </page>
                                </notebook>
                                 <group>
                                    <group>
                                        <field name="notice_period_amount" attrs="{'readonly': [('state','=','approve')]}"/>
                                    </group>
                                    <group>
                                        <field name="total_payable_amount"/>
                                    </group>
                                </group>
                        </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>



        <record id="action_other_settlements" model="ir.actions.act_window">
           <field name="name">Settlements</field>
           <field name="res_model">other.settlements</field>
            <!--          <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="other_settlements" name="Final Settlement" parent="employee_gratuity"
                  action="action_other_settlements" sequence="2" />

    </data>
</odoo>
