<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit the Product Screen for add the is_its_product check box.-->
    <record id="itc_product_template_view_inherit" model="ir.ui.view">
        <field name="name">itc.product.template.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='recurring_invoice']" position="after">
                <field name="is_itc_product"/>
            </xpath>
        </field>
    </record>

</odoo>