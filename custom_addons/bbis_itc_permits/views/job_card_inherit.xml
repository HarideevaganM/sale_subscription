<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- Inherit the Job Card for adding the ITC Button.-->
        <record id="bbis_itc_job_card_form_inherit" model="ir.ui.view">
            <field name="name">bbis.itc.job.card.form</field>
            <field name="model">job.card</field>
            <field name="inherit_id" ref="fms_sale.job_order_form"/>
            <field name="arch" type="xml">

                <!-- Showing the ITC Permit Smart Button in Job Card Screen If there is value.-->
                <div class="oe_button_box" name="button_box">
                    <button type="object" name="number_of_itc_permits" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible':[('itc_permit_count', '=', 0)]}">
                        <field name="itc_permit_count" widget="statinfo" string="ITC Permit"/>
                    </button>
                </div>

                <!--Adding new button for creating the ITC Permit in job card screen.-->
                <xpath expr="//header/button[@name='subscription_create']" position="after">
                    <button
                        name="itc_permit_create" type="object"
                        string="Create ITC Permit"
                        attrs="{'invisible':['|',('state','!=','done'),('job_card_type','=','support')]}"
                        groups="bbis_itc_permits.group_itc_permit_users" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>