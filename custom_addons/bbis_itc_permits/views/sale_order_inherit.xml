<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Inherit sales order view for adding the button itc permit if we choose the itc_product in product add line. -->
        <record id="bbis_itc_sale_order_form_inherit" model="ir.ui.view">
            <field name="name">bbis.itc.sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="fms_sale.sale_order_form_inherit_id"/>
            <field name="arch" type="xml">

                <!-- Add the boolean field invisible for create ITC button. -->
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name='show_itc_product' invisible="1"></field>
                </xpath>

<!--                 Adding Button for Create ITC Permit only if the itc product selected in product list. -->
                <xpath expr="//button[@name='get_terms']" position="after">
                    <button name="create_itc_permit" string="Upload ITC Permit" type="object" class="btn-primary"
                    attrs="{'invisible':[('state','!=', 'sale')]}"
                    groups="bbis_itc_permits.group_itc_permit_users"/>
                </xpath>

                <!-- Adding Smart Box in Sales Order for ITC Entries. -->
                <xpath expr="//button[@name='open_jobcard_view']" position="before">
                        <button type="object" name="show_itc_entries" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible':[('itc_count', '=', 0)]}">
                            <field name="itc_count" widget="statinfo" string="ITC Permit"/>
                        </button>
                </xpath>
            </field>
        </record>

        <!--Add ITC notes in Other Information tab after Report Page Break.-->
        <record id="bbis_itc_permit_so_inherit" model="ir.ui.view">
            <field name="name">bbis.itc.permit.so.inherit.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="bbis_reports.bbis_sale_order_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='report_page_break']" position="after">
                    <group name="itc_permit" string="ITC Permit" groups="bbis_itc_permits.group_itc_permit_users">
                        <field name="itc_notes" groups="bbis_itc_permits.group_itc_permit_users"/>
                    </group>
                </xpath>
            </field>
        </record>


    </data>
</odoo>