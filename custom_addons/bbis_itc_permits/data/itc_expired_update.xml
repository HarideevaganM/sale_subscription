<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">

        <!-- Scheduler for automatically update the status into Expired if the permit expired date after the current date.-->
        <record id="itc_expired_update_scheduler" model="ir.cron">
            <field name="name">ITC Expired Update Scheduler</field>
            <field name="model_id" ref="model_itc_permit"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.itc_expired_update()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>

    </data>
</odoo>