<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Paper Format -->
    <record id="bbis_itc_paper_format_job_cert" model="report.paperformat">
        <field name="name">European A4</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">45</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">35</field>
        <field name="dpi">96</field>
    </record><!-- End: Paper Format -->

    <!-- Report Setup -->
    <report id="bbis_itc_job_completion_certificate"
        model="itc.permit"
        string="Job Completion Certificate"
        report_type="qweb-pdf"
        file="bbis_itc_permits.job_completion_certificate"
        name="bbis_itc_permits.job_completion_certificate"
        paperformat="bbis_itc_permits.bbis_itc_paper_format_job_cert"
        print_report_name="('%s - Certificate' % (object.vehicle_no.name))"
    /><!-- End: End Report Setup -->

    <!-- Report Template -->
    <template id="job_completion_document">
        <div class="header">
            <div class="text-center">
                <img class="bbis-job-installation-cert-logo" src="/bbis_reports/static/src/img/blackbox-logo.svg" alt="Logo"/>
            </div><br/>
        </div>
        <br/>
        <div class="article o_report_layout_standard">
            <div class="page">
<!--                <div class="text-right" style="margin-bottom:50px; padding-top:50px; font-size:13pt">Certificate No: <span t-field="doc.name"/></div>-->
                <h2 class="text-center text-uppercase" style="margin-bottom:50px"><strong>Job Completion Certificate</strong></h2><br/>
                <p style="font-size:13pt; margin:20px 0" class="text-left">This is to certify that <strong class="text-uppercase" t-esc="company.name"/> has completed the installation, configuration and calibration for the <strong t-field="doc.partner_id"/> vehicle (Traffic Profile Number # <strong t-field="doc.traffic_code_no"/>), as follows:</p>

                <table class="bbis-job-cert-vehicle-table">
                    <tr>
                        <th class="text-center">Vehicle Model</th>
                        <th class="text-center">Plate No.</th>
                        <th class="text-center">Chassis Number</th>
                        <th class="text-center">Sim Number</th>
                        <th class="text-center">IVMS Device Serial No.</th>
                        <th class="text-center">Expiry Date</th>
                    </tr>
                    <tr>
                        <td class="text-center"><span t-field="doc.vehicle_no.vehicle_name"/></td>
                        <td class="text-center"><span t-field="doc.vehicle_no.name"/></td>
                        <td class="text-center"><span t-field="doc.chassis_no"/></td>
                        <td class="text-center"><span t-field="doc.sim_card_no"/></td>
                        <td class="text-center">BBIS<span t-field="doc.device_no"/></td>
                        <t t-if="doc.subscription_end_date">
                            <td class="text-center"><span t-field="doc.subscription_end_date"/></td>
                        </t>
                        <t t-else="">
                            <td class="text-center"></td>
                        </t>
                    </tr>
                </table><br/>
                <p style="font-size:13pt">This certificate is being issued upon the request of the above-named company.</p>
<!--                <p style="font-size:13pt">Issued on 24th December 2020.</p>-->
                <p style="font-size:13pt">Done this <strong><span t-esc="time.strftime('%B %d, %Y')"/></strong>.</p>

                <table style="width:100%; margin-top:40px;">
                    <tr>
                        <td style="width:65%"> </td>
                        <td class="bbis-job-cert-signatory">
                            <img class="bbis-job-cert-sign" src="/bbis_reports/static/src/img/marwan-signature.png" alt="Signature" height="150px"/>
                            For: <span t-esc="company.name"/><br/><br/>
                            <strong>Eng. Marwan Al Charbaji</strong><br/><br/>
                            <strong>Operations Manager</strong><br/>
                            <img class="bbis-job-cert-seal" t-att-src="'data:image/png;base64,%s' % to_text(company.seal)" width="280px"/>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="footer">
            <div style="background:#000000; height:1px; margin-bottom:5px"/>
            <ul class="list-inline bbis-footer-social-link-ul-job-cert text-center">
                <li>
                    <img src="/bbis_reports/static/src/img/address.jpg" alt="Address" />
                    <span>Tamouh Tower, 22-C1, Marina Square, Al Reem Island, Abu Dhabi, UAE - P.O. Box 39366</span>
                </li>
                <li>
                    <img src="/bbis_reports/static/src/img/phone.jpg" alt="Phone" />
                    <span>+971 2 643 6640</span>
                </li>
                <li>
                    <img src="/bbis_reports/static/src/img/fax.jpg" alt="Fax" />
                    <span>+971 2 643 6642</span>
                </li><br/>
                <li>
                    <img src="/bbis_reports/static/src/img/web.jpg" alt="Email" />
                    <span>www.fms-tech.com</span>
                </li>
                <li>
                    <img src="/bbis_reports/static/src/img/web.jpg" alt="Email" />
                    <span>info@fms-tech.com</span>
                </li>
            </ul>
        </div>
    </template>

    <template id="job_completion_certificate">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="bbis_itc_permits.job_completion_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template><!-- End: Report Template -->
</odoo>