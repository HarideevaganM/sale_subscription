<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="combo_product_wizard_form" model="ir.ui.view">
            <field name='name'>combo.product.wizard.form</field>
            <field name='model'>combo.product.wizard</field>
            <field name='arch' type='xml'>
                <form string='Bundle Product'>
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id" required="True" domain="[('is_combo', '=', 'True')]"/>
                                <field name="type"/>
                            </group>
                            <group>
                                <field name="quantity"/>
                                <field name="price"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name='action_set_order_line' string='Set Bundle' class='oe_highlight'
                            type='object'/>
                        <button special="cancel" string="Close" type="object" class="btn btn-default oe_inline" attrs="{}"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_combo_product" model="ir.actions.act_window">
            <field name="name">Bundle Product</field>
            <field name="res_model">combo.product.wizard</field>
            <!--          <field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>
</odoo>
