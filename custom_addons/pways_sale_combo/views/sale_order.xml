<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_form_inherit" model="ir.ui.view">
            <field name="name">product.template.from.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <div name="options" position="inside">
                    <div>
                        <field name="is_combo"/>
                        <label for="is_combo" name="combo"/>
                    </div>
                </div>
                <xpath expr='//page[4]' position="after">
                    <page string="Bundle Products" attrs="{'invisible': [('is_combo', '=', False)]}" name="combo">
                        <field name="product_combo_ids">
                            <tree editable="bottom">
                                <field name="product_id" domain="[('type', '!=', 'service')]"/>
                                <field name="product_uom_qty"/>
                                <field name="combo_price"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>


        <record id="view_order_line_tree_inherit" model="ir.ui.view">
            <field name="name">sale.order.line.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']" position="before">
                    <button name="%(action_combo_product)d" class="oe_highlight" icon="fa-list" type="action">Bundle Product</button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>


