<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- HR Employee Inherit -->
        <record id="hr_employee_inherit" model="ir.ui.view">
            <field name="name">hr.employee.inherit.form.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <!-- String name changed -->                
                <page name="personal_information" position='attributes'>
                    <attribute name='string'>Personal Information</attribute>
                </page>
                <field name="address_home_id" position='attributes'>
                    <attribute name='string'>Home Address</attribute>
                </field>
                <field name="parent_id" position='attributes'>
                    <attribute name='string'>Department Manager</attribute>
                </field>
                <field name="coach_id" position='attributes'>
                    <attribute name='string'>Department Officer</attribute>
                </field>
                <!-- Fields Inherited -->
                <field name="birthday" position='after'>
                    <field name='age'></field>
                </field>
                <field name="department_id" position='before'>
                    <field name='employee_id'></field>
                    <field name='loan_amt' invisible="1"></field>
                </field>
                <field name="country_id" position='before'>
                    <field name='uid_number'></field>
                    <field name='eid_number'></field>
                </field>
                <field name="visa_expire" position='after'>
                    <field name='medical_card'></field>
                    <field name='labour_card'></field>
                    <field name='labour_card_date'></field>
                </field>
                <field name="visa_expire" position='before'>
                    <field name='visa_issue_date'></field>
                </field>
                <page name="hr_settings" position='inside'>
                    <group string="Bank Details">
                        <group>
                            <field name='bank_number_id'></field>
                            <field name='bank_name'></field>
                            <field name='branch_name' ></field>
                        </group>
                    </group>
                </page>
                <!--<xpath expr="//page[@name='personal_information']/group" position="inside">
                    <group name="emergency_contact" colspan="4" string="Emergency Contact">
                        <field name="emergency_contact">
                            <tree editable="bottom">
                                <field name="number"/>
                                <field name="relation"/>
                            </tree>
                        </field>
                    </group>
                </xpath>-->
                <field name="address_home_id" position='after'>
<!--
					<group>
-->
						<field name='personal_mobile'></field>
						<label for="street" string="Address"/>
							<div>
								<field name="street" placeholder="Street..." class="o_address_street"/>
								<field name="street2" placeholder="Street 2..." class="o_address_street"/>
								<div class="o_address_format">
									<field name="city" placeholder="City" class="o_address_city"/>
									<field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
									<field name="zip" placeholder="ZIP" class="o_address_zip"/>
								</div>
								<field name="country_address_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
							</div>
<!--
					</group>
-->
				</field>
                <field name="user_id" position="after">
                    <field name="joining_date"/>
                </field>
                <xpath expr="//page[@name='personal_information']/group/group[1]" position="after">
                    <group name="passport_id" string="Passport ID">
                        <field name="passport_id"/>
                        <field name="passport_expiry_date" groups="hr.group_hr_user" attrs="{'invisible': [('passport_id', 'in', [None,False])]}"/>
                        <field name="passport_attachment_id" groups="hr.group_hr_user" widget="many2many_binary" class="oe_inline" attrs="{'invisible': [('passport_id', 'in', [None,False])]}"/>
                    </group>
                </xpath>
                <page name="hr_settings" position="after">
                    <page name="family_info" string="Family Information" groups="hr.group_hr_user">
                        <group string="Family">
                            <field name="fam_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="member_name"/>
                                    <field name="relation"/>
                                    <field name="member_contact"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </page>
                <!-- Fields inherited for Insurance -->
                <xpath expr="//page[@name='hr_settings']" position="after">
                    <page name="insurance" string="Insurance">
                        <group>
                            <group>
                                <field name="insurance_percentage">%</field>
                            </group>
                            <group>
                                <field name="deduced_amount_per_year"/>
                                <field name="deduced_amount_per_month"/>
                            </group>
                        </group>
                        <field name="insurance" context="{'default_employee_id':id}"/>
                    </page>
                </xpath>
                <xpath expr="//page[@name='hr_settings']" position="after">
                    <page name="document" string="Employee Documents">
                            <group string="Required Documents">
								<field name="document_line" nolabel="1">
									<tree create="false" delete="false">
										<field name="document_name"/>
										<field name="mandatory"/>
										<field name="expiry_date"/>
									</tree>
								</field>
							</group>
                    </page>
                </xpath>
                <!-- Button inherited for Employee document-->
                <div class="oe_button_box" position="inside">
                    <button class="oe_stat_button" name="document_view" type="object" icon="fa-list-ol">
                        <field string="Documents" name="document_count" widget="statinfo"/>
                    </button>
                    <button class="oe_stat_button" name="loan_view" type="object" icon="fa-money">
                        <field string="Loans" name="loan_count" widget="statinfo"/>
                    </button>
                </div>
                <!-- Fields Invisible -->
                <field name="identification_id" position='attributes'>
                    <attribute name='invisible'>True</attribute>
                </field>
                <field name="work_location_id" position='attributes'>
                    <attribute name='invisible'>True</attribute>
                </field>
                <field name="bank_account_id" position='attributes'>
                    <attribute name='invisible'>True</attribute>
                </field>
                <field name="passport_id" position='attributes'>
                    <attribute name='invisible'>True</attribute>
                </field>
                <field name="address_home_id" position='attributes'>
                    <attribute name='invisible'>True</attribute>
                </field>
                <field name="phone" position='attributes'>
                    <attribute name='readonly'>False</attribute>
                </field>
                <field name="private_email" position='attributes'>
                    <attribute name='readonly'>False</attribute>
                </field>
                <!-- <field name="barcode" position='attributes'>
                    <attribute name='invisible'>True</attribute>
                </field> -->
                <field name="badge_ids" position='attributes'>
                    <attribute name='invisible'>True</attribute>
                </field>
                <!--<div class="text-warning" position='attributes'>
                    <attribute name='invisible'>True</attribute>
                </div>-->
            </field>
        </record>
        
        <!-- Cron Employee document expiration -->
        <record model="ir.cron" id="employee_data_reminder">
            <field name="name">Employee Document Expiration</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_hr_employee_document"/>
            <field name="state">code</field>
            <field name="code">model.mail_reminder()</field>
        </record>
		
		<record model="ir.cron" id="employee_data_notification">
            <field name="name">HR Employee Data Expiration</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model.mail_notification()</field>
        </record>
					
        <!-- Form view for Employee document -->
        <record model='ir.ui.view' id='employee_document_form_view'>
            <field name="name">hr.employee.document.form</field>
            <field name="model">hr.employee.document</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="document_name"/>
                                <field name="name"/>
                                <field name="doc_attachment_id" widget="many2many_binary" class="oe_inline"/>
                                <field name="employee_ref" invisible="1"/>
                            </group>
                            <group>
                                <field name="issue_date"/>
                                <field name="expiry_date"/>
                            </group>
                        </group>
                        <group>
							<field name="description"/>
							<field name="mandatory" invisible="1"/>
						</group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view for Employee document -->
        <record model='ir.ui.view' id='employee_document_tree_view'>
            <field name="name">hr.employee.document.tree</field>
            <field name="model">hr.employee.document</field>
            <field name="arch" type="xml">
                <tree>
<!--
                    <field name="name"/>
-->
                    <field name="document_name"/>
                    <field name="issue_date"/>
                    <field name="expiry_date"/>
                </tree>
            </field>
        </record>
        
