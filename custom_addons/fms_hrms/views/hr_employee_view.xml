        <record id="hr_settings" model="ir.ui.view">
            <field name="name">res.config.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                        <div>
                            <field name="visa_validity" class="oe_inline" />
                            <label for="visa_validity"/>
                            <span class="oe_separate-from-text" attrs="{'invisible': [('visa_validity','=',False)]}">
                                <label for="limit_amount"/>
                                <field name="limit_amount"
                                        attrs="{'required': [('visa_validity','=',True)]}" class="oe_inline"/> days before
                            </span>
                        </div>
                </xpath>
            </field>
        </record>
        <record model="ir.cron" id="employee_visa_reminder">
            <field name="name">HR Employee Visa Expiration</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="hr_contract.model_hr_contract"/>
            <field name="state">code</field>
            <field name="code">model.mail_reminder_visa()</field>
<!--            <field name="args" eval="'()'" />-->
        </record>
        <record model="mail.template" id="email_template_for_alert_employees">
            <field name="name">Visa Alert Email For Employees</field>
            <field name="model_id" ref="fms_hrms.model_hr_contract"/>
            <field name="subject">Notification About Your Visa Expiry Date</field>
            <field name="email_from">{{object.employee_id.company_id.email or object.employee_id.user_id.user_email or 'noreply@localhost'}}</field>
        </record>
        
		<!-- Cron for send birthday wishes to employee, customer -->
        <record id="ir_cron_birthday_wish" forcecreate="True" model="ir.cron">
            <field name="name">Birthday Wishes Notification</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model.send_birthday_wish()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 00:00:05')" />
            <field eval="False" name="doall" />
        </record>
		<record id="email_birthday_wishes_employee_template" model="mail.template">
            <field name="name">Birthday Wishes Template</field>
            <field name="subject">Birthday Wishes ${object.name}</field>
            <field name="email_from">${user.email|safe}</field>
            <field name="email_to">${object.work_email|safe}</field>
            <field name="model_id" ref="fms_hrms.model_hr_employee"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
                <p>Dear ${object.name},</p>
                <p>Date: ${object.birthday}</p>
                <p>Happy Birthday..!</p>
                <p>Wish You a very Happy Birthday, ${object.name}.</p>
                <p>Hope you have a great Year Ahead. Stay Healthy, Stay Happy.</p>
                <p style="font-size: 12px;">
                <br></br>
                Wishes From : <strong>${user.company_id.name}</strong>
                </p>
            ]]>
            </field>
        </record>
		
		<record id="hr_contract_inherit" model="ir.ui.view">
            <field name="name">hr.contract.form.view</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
				<xpath expr="//form/header/field[@name='state']" position="after">
					<button type="action" name="%(action_salary_revision)d" string="Salary Revision" groups='hr_payroll_community.group_hr_payroll_manager' class="btn-primary"/>
                </xpath>
                <xpath expr="//field[@name='job_id']" position="after">
					<field name="nationality" invisible ="1"/>
                </xpath>
                <field name="wage" position='attributes'>
                    <attribute name='string'>Basic</attribute>
                </field>
				<xpath expr="//group[@name='salary']" position="inside">
					<field name="hra"/>
					<field name="mobile_allowance"/>
					<field name="fuel_allowance"/>
					<field name="allowance1"/>
					<field name="allowance2"/>
					<field name="allowance3"/>
					<field name="allowance4"/>
					<field name="total_allowance"/>						
				</xpath>
                <xpath expr="//page[@name='information']/group" position="inside">
					<group string ="Deduction">
						<field name="loan_deduction"/>
						<field name="deduction2"/>
						<field name="deduction3"/>
						<field name="deduction4"/>
						<field name="deduction5"/>
						<field name="deduction6"/>
						<field name="deduction7"/>
						<field name="total_deduction"/>
					</group>			
                </xpath>

                <xpath expr="//page[1]" position="after">
					 <page string="Salary History">
					   <field name="history_line"  widget="one2many_list">
							<tree editable="bottom">
								<field name="contract_id" invisible="1"/>
								<field name="old_basic"/>
								<field name="old_wage"/>
								<field name="old_stucture_id"/>
							</tree>
						</field>
					</page>
				</xpath>
                <xpath expr="//field[@name='schedule_pay']" position="after">
					<field name="paid_leave"/>
                </xpath>
            </field>
        </record>  
		<record id="hr_expense_inherit" model="ir.ui.view">
            <field name="name">hr.expense.form.view</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
            <field name="arch" type="xml">
               <field name="product_id" position='attributes'>
                    <attribute name='string'>Expense</attribute>
                </field>
            </field>
        </record>  
