<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
		<record id="sale_order_new_view" model="ir.ui.view">
            <field name="name">Sale</field>
            <field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

            <xpath expr="/form/header/button[@name='action_cancel']" position="after">
                <button name="get_order_status_report" type="object" string="Order Status" class="oe_highlight" states="sale"/>
                <button name="get_assigned_report" type="object" string="Assigned Devices" class="oe_highlight" states="sale"/>
            </xpath>

            <xpath expr="/form/sheet/group/group/field[@name='payment_term_id']" position="after">
				<field name="filedata" filename="filename" attrs="{'invisible':['|',('state','!=','sale'),('filedata','=', False)]}"/>
				<field name="filename" invisible="1"/>
				<field name="datafile" filename="namefile" attrs="{'invisible':['|',('state','!=','sale'),('datafile','=', False)]}"/>
				<field name="namefile" invisible="1"/>
			</xpath>
            </field>
        </record>
	</data>
</odoo>
