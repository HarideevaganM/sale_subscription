<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
                
     <record id="import_stock_wizard_view" model="ir.ui.view">
            <field name="name">import.stock.wizard.form.view</field>
            <field name="model">import.stock</field>
            <field name="arch" type="xml">
                <form string="Import a csv file">
                    <group name="main">
                        <field name="name" />
                        <field name="csv_file" />
                    </group>
                    <footer>
                        <button name="import_csv" type="object" string="Import" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>   
       
        <record id="import_stock_wizards_action" model="ir.actions.act_window">
            <field name="name">Import a csv file</field>
            <field name="res_model">import.stock</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
       
<!--
        <menuitem id="menu_import_stock_wizard"
                  name="Import Stock"
                  action="import_stock_wizards_action"
                  sequence="1" /> 
-->

                 
        <record id="inherit_stock_quant_tree" model="ir.ui.view">
            <field name="name">stock.quant.tree</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
            <field name="arch" type="xml">
                <button name='action_set_inventory_quantity' position="after">
                    <button name="%(import.import_stock_wizards_action)d" type="action" string="Update Stock" class="oe_highlight"/>
                </button>               
            </field>
        </record>
                            
    </data>
</odoo>
