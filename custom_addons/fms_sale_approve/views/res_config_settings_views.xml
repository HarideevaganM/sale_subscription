<odoo>
    <data>

        <record id="group_sale_super_user" model="res.groups">
            <field name="name">Sales Super User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="res_config_settings_view_form_inherit_approval" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='delivery']" position="after">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="so_order_approval"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="so_order_approval"/>
                            <div class="text-muted">
                                Set a sale amount for approvals
                            </div>
                            <div class="content-group" attrs="{'invisible': [('so_order_approval', '=', False)]}">
                                <div class="row mt16">
                                    <label for="so_min_validation_amount" class="col-md-4 o_light_label"/>
                                    <field name="so_min_validation_amount"/>
                                </div>
                                <div class="row mt16">
                                    <label for="so_max_validation_amount" class="col-md-4 o_light_label"/>
                                    <field name="so_max_validation_amount"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="sale_form_inherit_view_new" model="ir.ui.view">
            <field name="name">sale</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref = "sale.view_order_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='state']" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,approval,sale"/>
                </xpath>
                <xpath expr="/form/header" position="inside">
                    <button name="action_approved" string="Approve"  class="oe_highlight" type="object" attrs="{'invisible': [('state','!=', 'approval')]}"/>
                </xpath>
                <xpath expr="//button[@name='get_terms']" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', ('state', 'in', ['sale', 'done']),
                     ('state', 'in', ['approval',])]}</attribute>
                </xpath>
                <xpath expr="//button[@name='get_terms']" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', ('state', 'in', ['sale', 'done']), ('state', 'in', ['approval',])]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_confirm']" position="attributes">
                 <attribute name="attrs">{'invisible': ['|', ('state', 'in', ['draft','cancel','sent','sale']), ('state', 'in', ['approval',])]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_submit']" position="attributes">
                 <attribute name="attrs">{'invisible': ['|', ('state', 'in', ['submit', 'sale','cancel']), ('state', 'in', ['approval',])]}</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>