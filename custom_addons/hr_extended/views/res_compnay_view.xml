<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_salary_advance_inherit" model="ir.ui.view">
            <field name="name">salary.fms.advance.form</field>
            <field name="model">salary.advance</field>
            <field name="inherit_id" ref="fms_hrms.view_salary_advance_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='approve_request']" position="attributes">
                    <attribute name="string">HR Approval</attribute>
                </xpath>
                <xpath expr="//button[@name='approve_request_acc_dept']" position="attributes">
                    <attribute name="string">CEO approval</attribute>
                </xpath>
                <xpath expr="//field[@name='employee_contract_id']" position="attributes">
                    <attribute name="attrs">{'invisible': []}</attribute>
                </xpath>
            </field>
        </record>

        <record id="res_compnay_hr_from_inherit" model="ir.ui.view">
            <field name="name">res.company.fms.form.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <field name="report_footer" position="after">
                    <field name="credit_account" />
                    <field name="debit_account" />
                    <field name="journal_id" />
                </field>
            </field>
        </record>

        <record id="view_salary_advance_inherit_select" model="ir.ui.view">
            <field name="name">salary.advance.fms.select</field>
            <field name="model">salary.advance</field>
            <field name="inherit_id" ref="fms_hrms.view_salary_advance_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='my_requests_filter']" position="replace">
                    <filter domain="[('state','in',('draft', 'submit', 'cancel', 'reject'))]" string="Submit Requests" name="my_requests_filter"/>
                </xpath>
                <xpath expr="//filter[@name='submitted']" position="replace">
                    <filter domain="[('state','in',('approve', 'waiting_approval'))]" string="All Approvals" name="submitted" help="Submitted Requests"/>
                </xpath>
                <xpath expr="//filter[@name='approved']" position="replace">
                    <filter domain="[('employee_id.user_id.id', '=', uid)]" string="My Requests" name="approved"/>
                </xpath>
            </field>
        </record>

        <record id="fms_hrms.action_my_salary_advance" model="ir.actions.act_window">
            <field name="name">Salary Advance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">salary.advance</field>
            <!--          <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="fms_hrms.view_salary_advance_filter"/>
            <field name="context">{}</field>
            <field name="domain">[('state', 'in', ('draft', 'submit', 'cancel', 'reject'))]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create Requests.
                </p>
            </field>
        </record>

        <record id="fms_hrms.action_my_salary_advance" model="ir.actions.act_window">
            <field name="name">Salary Advance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">salary.advance</field>
            <!--          <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="fms_hrms.view_salary_advance_filter"/>
            <field name="context">{}</field>
            <field name="domain">[('state', 'in', ('draft', 'submit', 'cancel', 'reject'))]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create Requests.
                </p>
            </field>
        </record>

    </data>
</odoo>