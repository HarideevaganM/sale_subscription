<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <report
            id="monthly_attendance_report"
            model="monthly.attendance.report"
            string="Monthly Attendance Report"
            report_type="xlsx"
            name="bbis_attendance_temp.monthly_attendance_report"
            file="Monthly Attendance Report"
            attachment_use="True"
            menu = "False"
        />

        <report
            id="monthly_attendance_temp_report"
            model="monthly.attendance.report"
            string="Attendance Temp Report"
            report_type="xlsx"
            name="bbis_attendance_temp.attendance_temp_xlsx"
            file="Monthly Attendance Temp Report"
            attachment_use="True"
            menu = "False"
        />

        <record id="attendance_report_wizard_view" model="ir.ui.view">
            <field name="name">attendance.report.wizard.view</field>
            <field name="model">monthly.attendance.report</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="branch_id" required="1"/>
                    </group>
                    <group string="Date">
                        <group><field name="start_date" required="1"/></group>
                        <group><field name="end_date" required="1"/></group>
                    </group>
                    <footer>
                        <button name="download_attendance" string="Download Excel" type="object" class="oe_right oe_highlight"/>
                        <button string="Close" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="actions_monthly_attendance" model="ir.actions.act_window">
            <field name="name">Monthly Attendance Report</field>
            <field name="res_model">monthly.attendance.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="attendance_report_wizard_view"/>
            <field name="target">new</field>
        </record>

        <record id="attendance_temp_report_form" model="ir.ui.view">
            <field name="name">Attendance Temp Report Form</field>
            <field name="model">monthly.attendance.report</field>
            <field name="arch" type="xml">
                <form>
                    <field name="is_attendance_temp" invisible="1"/>
                    <group>
                        <field name="branch_id" required="1"/>
                    </group>

                    <group string="Date">
                        <group><field name="start_date" required="1"/></group>
                        <group><field name="end_date" required="1"/></group>
                    </group>
                    <footer>
                        <button name="download_attendance_temp" string="Download Excel" type="object" class="oe_right oe_highlight"/>
                        <button string="Close" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="actions_attendance_temp" model="ir.actions.act_window">
            <field name="name">Attendance Temp Report</field>
            <field name="res_model">monthly.attendance.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="attendance_temp_report_form"/>
            <field name="context">{'default_is_attendance_temp': True}</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_monthly_attendance_report"
              name="Monthly Attendance Report"
              action="actions_monthly_attendance"
              parent="hr_attendance.menu_hr_attendance_report"
              sequence="90"
              groups="hr_attendance.group_hr_attendance_user"/>

        <menuitem id="menu_attendance_temp_report"
              name="Monthly Attendance Temp Report"
              action="actions_attendance_temp"
              parent="hr_attendance.menu_hr_attendance_report"
              sequence="95"
              groups="hr_attendance.group_hr_attendance_user"/>
    </data>
</odoo>