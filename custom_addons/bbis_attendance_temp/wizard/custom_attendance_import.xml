<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="action_custom_attendance_import">
            <field name="name">Custom Attendance Import</field>
            <field name="res_model">attendance.import.file</field>
            <!--          <field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="import_custom_attendance_import_form" model="ir.ui.view">
            <field name="name">import.custom.attendance.import.form</field>
            <field name="model">attendance.import.file</field>
            <field name="arch" type="xml">
                <form string="Custom Attendance Import">
                    <group>
                        <group>
                            <field name="branch"/>
                            <field name="month"/>
                        </group>
                        <group>
                            <field name="file" filename="file_name"/>
                            <field name="file_name" invisible="1"/>
    <!--                            <field name="file_type"/>-->
                        </group>
                        </group>
<!--                    <group>-->
<!--                        <field name="file" filename="file_name"/>-->
<!--                        <field name="file_name" invisible="1"/>-->
<!--                    </group>-->

                    <footer>
                        <button name="import_file" string="Import" type="object" class='oe_highlight'/>
                        <button name="cancel" string="Cancel" class="oe_link" special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>

        <menuitem name="Import Attendance (Excel)" id="menu_custom_attendance_import" parent="bbis_attendance_temp.bbis_attendance_custom_menu"
        action="action_custom_attendance_import" groups="hr_attendance.group_hr_attendance" sequence="20"/>

    </data>
</odoo>