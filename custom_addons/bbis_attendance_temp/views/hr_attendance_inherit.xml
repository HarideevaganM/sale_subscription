<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="attendance_module_form_inherit" model="ir.ui.view">
            <field name="name">hr.attendance.inherit</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
            <field name="arch" type="xml">
                <field name="check_out" position="after">
                    <field name="remarks" string = "Remarks"/>
                </field>
            </field>
        </record>

        <record id="attendance_module_tree_inherit" model="ir.ui.view">
            <field name="name">hr.attendance.tree.inherited</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_tree" />
            <field name="arch" type="xml">
                <field name="check_out" position="after">
                    <field name="remarks" string = "Remarks"/>
                    <field name="worked_hours" sum="Total Hours"/>
                </field>
                <xpath expr="//tree" position="attributes">
                    <attribute name="editable">top</attribute>
                    <attribute name="decoration-muted">remarks == 'Day Off'</attribute>
                    <attribute name="decoration-success">remarks == ''</attribute>
                </xpath>
            </field>
        </record>

        <record id="attendance_module_pivot_inherit" model="ir.ui.view">
            <field name="name">hr.attendance.pivot.inherited</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.hr_attendance_view_pivot" />
            <field name="arch" type="xml">
                <field name="employee_id" position="before">
                    <field name="office_location" type="row"/>
                </field>
            </field>
        </record>

        <record id="attendance_module_search_inherit" model="ir.ui.view">
            <field name="name">hr.attendance.search.inherited</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.hr_attendance_view_filter" />
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='today']" position="after">
                    <filter string="This Year" name="this_year" domain="[('check_in','&lt;=', time.strftime('%%Y-12-31')),('check_in','&gt;=',time.strftime('%%Y-01-01'))]"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>