<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Setup -->
    <report id="bbis_reports_receipts"
        model="account.move.line"
        string="Receipts Report"
        report_type="qweb-pdf"
        file="bbis_reports.receipts_report"
        name="bbis_reports.receipts_report"
        paperformat="bbis_reports.bbis_sales_rpt_paper_format"
        print_report_name="Receipts" menu="False"
    /><!-- End: End Report Setup -->

    <!-- Report Template -->
    <template id="receipts_report_document">
        <div class="header">
            <div class="bbis-company-header clear-fix">
                <img class="bbis-company-logo" style="height:100px; width:auto;" src="/bbis_reports/static/src/img/blackbox-logo.svg" alt="Logo"/>
                <div class="bbis-company-details">
                    <h1 class="text-uppercase" style="margin:0; font-size:22pt"><strong>Monthly Receipts Report</strong></h1>
                    <div>
                        <span t-if="move_state == 'posted'" t-esc="'All Posted Entries'"/>
                        <span t-else="" t-esc="'All Entries'"/>
                        <br/>
                        <span t-if="date == 'this_year'" t-esc="'This Year'"/>
                        <span t-elif="date == 'last_year'" t-esc="'Last Year'"/>
                        <span t-else="">
                            <t t-esc="start_date.strftime('%B %Y')"/> -
                            <t t-esc="end_date.strftime('%B %Y')"/>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="article o_report_layout_standard">
            <div class="page">
                <t t-set="start_range" t-value="data['start_range']"/>
                <t t-if="date != 'custom'" t-set="start_range" t-value="start_range + 1"/>
                <t t-set="end_range" t-value="data['end_range']"/>

                <t t-set="table1_width" t-value="'width: auto;'"/>
                <t t-if="date_range > 5" t-set="table1_width" t-value="'width: 100%;'"/>

                <t t-call="bbis_reports.bbis_receipts_report_comp">
                    <t t-set="report_title">Monthly Receipts</t>
                    <t t-set="report_total_title">Receipts</t>
                    <t t-set="report_data" t-value="data"/>
                </t>
            </div>
        </div>
        <div class="footer">
            <t t-call="bbis_reports.bbis_custom_sale_footer"/>
        </div>
    </template>

    <template id="receipts_report">
        <t t-call="web.html_container">
            <t t-call="bbis_reports.receipts_report_document"/>
        </t>
    </template>

    <template id="bbis_receipts_report_comp">
        <div style="page-break-before: always;"/>

        <t t-set="column_count" t-value="int(date_range)"/>
        <t t-set="col_multiplier" t-value="1"/>
        <t t-if="include_db" t-set="col_multiplier" t-value="col_multiplier + 1"/>
        <t t-if="include_cr" t-set="col_multiplier" t-value="col_multiplier + 1"/>
        <t t-set="column_count" t-value="int(date_range) * col_multiplier"/>

        <t t-set="table_class" t-value="'bbis-accounting-report-table1 row-striped'"/>
        <t t-if="col_multiplier > 2" t-set="table_class" t-value="'bbis-accounting-report-table1 row-striped small-padding'"/>

        <table t-att-class="table_class"  t-att-style="table1_width">
            <tr>
                <th rowspan="3">Company Name</th>
                <th t-att-colspan="column_count" class="text-uppercase">
                    <h2 style="margin:0; font-size:15pt"><strong><t t-esc="report_title"/></strong></h2>
                </th>
                <th rowspan="3" t-if="include_db">Total <br/>Debit</th>
                <th rowspan="3" t-if="include_cr">Total <br/>Credit</th>
                <th rowspan="3">Total <br/>Balance</th>
            </tr>
            <t t-set="start_range" t-value="data['start_range']"/>
            <t t-if="date != 'custom'" t-set="start_range" t-value="start_range + 1"/>
            <t t-set="end_range" t-value="data['end_range']"/>
            <tr>
                <th t-att-colspan="col_multiplier" class="sub-header" t-foreach="range(start_range, end_range)" t-as="month" style="white-space:nowrap">
                    <t t-set="month_int" t-value="month"/>
                    <t t-set="month_name" t-value="datetime.date(1900, month_int, 1).strftime('%b')"/>
                    <span t-esc="month_name"/>
                    <span t-esc="year.strftime('%Y')"/>
                </th>
            </tr>

            <tr>
                <t class="sub-header" t-foreach="range(date_range)" t-as="month">
                    <th class="sub-header" t-if="include_db">Debit</th>
                    <th class="sub-header" t-if="include_cr">Credit</th>
                    <th class="sub-header">Balance</th>
                </t>
            </tr>

            <tbody>
                <t t-if="len(report_data['keys']) > 0">
                    <t t-foreach="report_data['keys']" t-as="k">
                        <tr>
                            <t t-set="total_debit" t-value="0.00"/>
                            <t t-set="total_credit" t-value="0.00"/>
                            <t t-set="total_balance" t-value="0.00"/>
                            <t t-set="partner_style" t-value="''"/>
                            <t t-if="col_multiplier > 2 and report_title=='Receivables'" t-set="partner_style" t-value="'white-space:normal'"/>

                            <td t-att-style="partner_style">
                                <span t-if="k" t-esc="k"/>
                                <span t-else="" t-esc="'Undefined'"/>
                            </td>
                            <t t-foreach="range(start_range, end_range)" t-as="ctr">
                                <t t-if="include_db">
                                    <td class="text-right">
                                        <span t-esc="report_data['list'][k][ctr]['debit']" t-options='{"widget": "float", "precision": 2}'/>
                                        <t t-set="total_debit" t-value="total_debit + report_data['list'][k][ctr]['debit']"/>
                                    </td>
                                </t>
                                <t t-if="include_cr">
                                    <td class="text-right">
                                        <span t-esc="report_data['list'][k][ctr]['credit']" t-options='{"widget": "float", "precision": 2}'/>
                                        <t t-set="total_credit" t-value="total_credit + report_data['list'][k][ctr]['credit']"/>
                                    </td>
                                </t>
                                <td class="text-right">
                                    <span t-esc="report_data['list'][k][ctr]['balance']" t-options='{"widget": "float", "precision": 2}'/>
                                    <t t-set="total_balance" t-value="total_balance + report_data['list'][k][ctr]['balance']"/>
                                </td>
                            </t>
                            <td class="text-right" t-if="include_db"><span t-esc="total_debit" t-options='{"widget": "float", "precision": 2}'/></td>
                            <td class="text-right" t-if="include_cr"><span t-esc="total_credit" t-options='{"widget": "float", "precision": 2}'/></td>
                            <td class="text-right"><span t-esc="total_balance" t-options='{"widget": "float", "precision": 2}'/></td>
                        </tr>
                    </t>

                    <tr>
                        <td class="tbody-total"><strong>Total <t t-esc="report_total_title"/></strong></td>
                        <t t-set="total_report_debit" t-value="0.00"/>
                        <t t-set="total_report_credit" t-value="0.00"/>
                        <t t-set="total_report_balance" t-value="0.00"/>
                        <t t-foreach="range(start_range, end_range)" t-as="ctr">
                            <t t-if="include_db">
                                <td class="tbody-total text-right">
                                    <strong t-esc="report_data['total']['account'][ctr]['debit']" t-options='{"widget": "float", "precision": 2}'/>
                                    <t t-set="total_report_debit" t-value="total_report_debit + report_data['total']['account'][ctr]['debit']"/>
                                </td>
                            </t>
                            <t t-if="include_cr">
                                <td class="tbody-total text-right">
                                    <strong t-esc="report_data['total']['account'][ctr]['credit']" t-options='{"widget": "float", "precision": 2}'/>
                                    <t t-set="total_report_credit" t-value="total_report_credit + report_data['total']['account'][ctr]['credit']"/>
                                </td>
                            </t>
                            <td class="tbody-total text-right">
                                <strong t-esc="report_data['total']['account'][ctr]['balance']" t-options='{"widget": "float", "precision": 2}'/>
                                <t t-set="total_report_balance" t-value="total_report_balance + report_data['total']['account'][ctr]['balance']"/>
                            </td>
                        </t>
                        <td class="tbody-total text-right" t-if="include_db"><strong t-esc="total_report_debit" t-options='{"widget": "float", "precision": 2}'/></td>
                        <td class="tbody-total text-right" t-if="include_cr"><strong t-esc="total_report_credit" t-options='{"widget": "float", "precision": 2}'/></td>
                        <td class="tbody-total text-right"><strong t-esc="total_report_balance" t-options='{"widget": "float", "precision": 2}'/></td>
                    </tr>
                </t>
                <t t-else="">
                    <tr><td t-att-colspan="column_count + 4" class="text-center">No records found</td></tr>
                </t>
            </tbody>
        </table>
    </template>
    <!-- End: Template -->
</odoo>