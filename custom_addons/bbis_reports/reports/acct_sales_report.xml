<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Paper Format -->
    <record id="bbis_sales_rpt_paper_format" model="report.paperformat">
        <field name="name">Legal</field>
        <field name="default" eval="True"/>
        <field name="format">A3</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">12</field>
        <field name="margin_left">8</field>
        <field name="margin_right">8</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">30</field>
        <field name="dpi">96</field>
    </record><!-- End: Paper Format -->

    <!-- Report Setup -->
    <report id="bbis_reports_sales"
        model="account.move.line"
        string="Sales Report"
        report_type="qweb-pdf"
        file="bbis_reports.sales_report"
        name="bbis_reports.sales_report"
        paperformat="bbis_reports.bbis_sales_rpt_paper_format"
        print_report_name="Sales" menu="False"
    /><!-- End: End Report Setup -->

    <!-- Report Template -->
    <template id="sales_report_document">
        <div class="header">
            <div class="bbis-company-header clear-fix">
                <img class="bbis-company-logo" style="height:100px; width:auto;" src="/bbis_reports/static/src/img/blackbox-logo.svg" alt="Logo"/>
                <div class="bbis-company-details">
                    <h1 class="text-uppercase" style="margin:0; font-size:22pt"><strong>Sales Report</strong></h1>
                    <div>
                        <span t-if="move_state == 'posted'" t-esc="'All Posted Entries'"/>
                        <span t-else="" t-esc="'All Entries'"/>
                        <br/>
                        <span t-if="date == 'this_year'" t-esc="'This Year'"/>
                        <span t-elif="date == 'last_year'" t-esc="'Last Year'"/>
                        <span t-else="">
                            <t t-esc="start_date.strftime('%B %Y')"/> -
                            <t t-esc="end_date.strftime('%B %Y')"/>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="article o_report_layout_standard">
            <div class="page">
                <t t-set="start_range" t-value="data['start_range']"/>
                <t t-if="date != 'custom'" t-set="start_range" t-value="start_range + 1"/>
                <t t-set="end_range" t-value="data['end_range']"/>

                <t t-set="table1_width" t-value="'width: auto;'"/>
                <t t-if="date_range > 5" t-set="table1_width" t-value="'width: 100%;'"/>

                <t t-call="bbis_reports.bbis_sales_report_comp">
                    <t t-set="sched_title">Sales Report</t>
                    <t t-set="sched_total_title">Sales</t>
                    <t t-set="sched_data" t-value="data"/>
                </t>


