<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Paper Format -->
    <record id="bbis_report_paper_format_inst_cert" model="report.paperformat">
        <field name="name">European A4</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">45</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">35</field>
        <field name="dpi">96</field>
    </record><!-- End: Paper Format -->

    <!-- Report Setup -->
    <report id="bbis_reports_installation_certificate"
        model="installation.certificate"
        string="Installation Certificate (BBIS)"
        report_type="qweb-pdf"
        file="bbis_reports.installation_certificate"
        name="bbis_reports.installation_certificate"
        paperformat="bbis_reports.bbis_report_paper_format_inst_cert"
        print_report_name="(object.name)"
    /><!-- End: End Report Setup -->

    <!-- Report Template -->
    <template id="installation_certificate_document">
        <div class="header">
            <div class="text-center">
                <img class="bbis-installation-cert-logo" src="/bbis_reports/static/src/img/blackbox-logo.svg" alt="Logo"/>
            </div>
        </div>
        <div class="article o_report_layout_standard">
            <div class="page">
                <div class="text-right" style="margin-bottom:50px; padding-top:50px; font-size:13pt">Certificate No: <span t-field="doc.name"/></div>
                <h2 class="text-center text-uppercase" style="margin-bottom:50px"><strong>IVMS FITNESS CERTIFICATE</strong></h2>
                <p style="font-size:13pt; margin:20px 0" class="text-center">This is to certify that <strong class="text-uppercase" t-field="doc.company_id"/> has completed the installation, configuration and calibration of below device on <strong t-field="doc.partner_id"/> vehicle, as follow:</p>

                <table class="bbis-inst-cert-vehicle-table">
                    <tr>
                        <th class="text-center">#</th>
                        <th class="text-center">Vehicle Model</th>
                        <th class="text-center">Vehicle Plate No.</th>
                        <th class="text-center">Device</th>
                        <th class="text-center">IVMS Device Serial No.</th>
                        <th class="text-center">Installation Date</th>
                    </tr>
                    <tr>
                        <td class="text-center">1</td>
                        <td class="text-center"><span t-field="doc.vehicle_number.vehicle_name"/></td>
                        <td class="text-center"><span t-field="doc.vehicle_number.name"/></td>
                        <td class="text-center"><span t-field="doc.device_id.name"/></td>
                        <td class="text-center"><span t-field="doc.serial_no"/></td>
                        <t t-if="doc.rma_closed_date">
                            <td class="text-center"><span t-field="doc.rma_closed_date"/></td>
                        </t>
                        <t t-else="">
                            <td class="text-center"><span t-field="doc.installation_date"/></td>
                        </t>
                    </tr>
                </table>
                <p style="font-size:13pt">This certificate is being issued upon the request of the above-named company.</p>
<!--                <p style="font-size:13pt">Issued on 24th December 2020.</p>-->
                <p style="font-size:13pt">Issued on <span t-esc="time.strftime('%B %d, %Y')"/>.</p>

                <table style="width:100%; margin-top:40px;">
                    <tr>
                        <td style="width:65%"> </td>
                        <td class="bbis-inst-cert-signatory">
                            <img class="bbis-inst-cert-sign" src="/bbis_reports/static/src/img/marwan-signature.png" alt="Signature" height="150px"/>
                            <strong t-field="doc.company_id"/><br/>
                            Eng. Marwan Al Charbaji<br/>
                            Operations Manager<br/>
                            <img class="bbis-inst-cert-seal" t-att-src="'data:image/png;base64,%s' % to_text(doc.company_id.seal)" width="280px"/>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="footer">
            <div style="background:#000000; height:1px; margin-bottom:5px"/>
            <ul class="list-inline bbis-footer-social-link-ul-inst-cert text-center">
                <li>
                    <img src="/bbis_reports/static/src/img/address.jpg" alt="Address" />
                    <span>Tamouh Tower, 22-C1, Marina Square, Al Reem Island, Abu Dhabi, UAE - P.O. Box 39366</span>
                </li>
                <li>
                    <img src="/bbis_reports/static/src/img/phone.jpg" alt="Phone" />
                    <span>+971 2 643 6640</span>
                </li>
                <li>
                    <img src="/bbis_reports/static/src/img/fax.jpg" alt="Fax" />
                    <span>+971 2 643 6642</span>
                </li>
                <li>
                    <img src="/bbis_reports/static/src/img/email.jpg" alt="Email" />
                    <span>blackbox@fms-tech.com</span>
                </li>
                <li>
                    <img src="/bbis_reports/static/src/img/web.jpg" alt="Email" />
                    <span>www.fms-tech.com</span>
                </li>
            </ul>
        </div>
    </template>

    <template id="installation_certificate">
        <t t-call="web.html_container">
            <t t-if="len(docs) > 1">
                <t t-call="bbis_reports.renewal_certificate_multi" t-certificates="docs"/>
            </t>
            <t t-else="">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="bbis_reports.installation_certificate_document" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </t>
    </template><!-- End: Report Template -->
</odoo>