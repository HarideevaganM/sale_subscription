<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Setup -->
    <report id="bbis_reports_delivery_order"
        model="stock.picking"
        string="Delivery Order"
        report_type="qweb-pdf"
        file="bbis_reports.delivery_order"
        name="bbis_reports.delivery_order"
        paperformat="bbis_reports.bbis_report_paper_format"
        print_report_name="(object.name)"
    /><!-- End: End Report Setup -->

    <!-- Report Template -->
    <template id="delivery_order_document">
        <div class="header">
            <div class="bbis-company-header clear-fix">
                <img class="bbis-company-logo" style="height:130px; width:auto;" src="/bbis_reports/static/src/img/blackbox-logo.svg" alt="Logo"/>

                <div class="bbis-company-details">
                    <div t-esc="company.street"/>
                    <div>
                        <t t-if="company.street2"><span t-esc="company.street2"/>,</t>
                        <t t-if="company.city"><span t-esc="company.city"/></t>
                        <t t-if="company.state_id">, <span t-esc="company.state_id.name"/>,</t>
                        <t t-if="company.zip"><span t-esc="company.zip"/></t>

                    </div>
                    <div t-if="company.country_id" t-esc="company.country_id.name"/>
                    <div>
                        Tel : <span t-esc="company.phone"/>
                        Fax : <span t-esc="company.fax_new"/>
                    </div>
                    <div> Email : <span t-esc="company.email"/></div>
                    <div>Website : <span t-esc="company.website"/></div>
                </div>
            </div>
        </div>
        <div class="article o_report_layout_standard">
            <div class="page">
                <div class="bbis-report-header">
                    <h1 class="text-center text-uppercase" style="margin:40px 0; font-size:25pt"><strong>Delivery Order</strong></h1>

                    <p style="margin:0" class="text-uppercase">Customer:</p>
                    <table class="bbis-report-header-table" style="width:100%;">
                        <tr>
                            <td style="width:65%; vertical-align:top">
                                <table style="width:100%">
                                    <tr>
                                        <td><h4 style="margin:0"><strong><span t-esc="o.partner_id.name"/></strong></h4></td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <t t-if="o.partner_id.street"><span t-esc="o.partner_id.street"/><br/></t>

                                            <t t-if="o.partner_id.street2"><span t-esc="o.partner_id.street2"/>,</t>
                                            <t t-if="o.partner_id.city and o.partner_id.city.strip()"><span t-esc="o.partner_id.city"/>,</t>
                                            <t t-if="o.partner_id.state_id">, <span t-esc="o.partner_id.state_id.name"/>,</t>
                                            <t t-if="o.partner_id.zip and o.partner_id.zip.strip()"><span t-esc="o.partner_id.zip"/>,</t>
                                            <span t-if="o.partner_id.country_id" t-esc="o.partner_id.country_id.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <t t-if="o.partner_id.phone">Tel No: <span t-esc="o.partner_id.phone"/></t>
                                            <t t-elif="o.partner_id.mobile">Mobile No: <span t-esc="o.partner_id.mobile"/></t>
                                            <t t-else="">Tel No: </t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Email: <span t-esc="o.partner_id.email"/></td>
                                    </tr>
                                    <tr>
                                        <td>TRN: <span t-esc="o.partner_id.vat"/></td>
                                    </tr>
                                </table>
                            </td>
                            <td style="width:35%; padding-right:30px">
                                <table style="width:100%; vertical-align:top">
                                    <tr><td>Delivery Order No: <span t-field="o.name"/></td></tr>
                                    <tr><td>Delivery Order Date: <span t-field="o.scheduled_date" t-options='{"widget": "date", "format":"dd/MM/Y"}'/></td></tr>
                                    <tr><td height="15"/></tr>
                                    <tr><td>Purchase Order No: <span t-field="o.po_number"/></td></tr>
                                    <tr><td>Purchase Order Date: <span t-field="o.po_date"/></td></tr>
                                    <tr><td height="15"/></tr>
                                    <tr><td>Shipping Date: <span t-field="o.shipment_date"/></td></tr>
                                    <tr><td>Courier: <span t-field="o.courier"/></td></tr>
                                    <tr><td>AWB No: <span t-field="o.awb_no"/></td></tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </div>

                <!-- Delivery order lines -->

                <table class="bbis-tax-invoice-table" style="width:100%; margin-top:30px">
                    <tr>
                        <th class="text-center text-uppercase" style="width:30px">SN</th>
                        <th class="text-center text-uppercase" style="width:80px">Item Code</th>
                        <th class="text-center text-uppercase" style="width:auto">Item Description</th>
                        <th class="text-center text-uppercase" style="width:80px; white-space:nowrap">Serial No.</th>
                        <th class="text-center text-uppercase" style="width:50px">Weight</th>
                        <th class="text-center text-uppercase" style="width:50px">Qty</th>
                        <th class="text-center text-uppercase" style="width:50px">Unit</th>
                    </tr>
                    <tr t-foreach="o.move_lines" t-as="l">
                        <td class="text-center"><span t-esc="l_index + 1"/></td>
                        <td class="text-center"><span t-field="l.product_id.default_code"/></td>
                        <td><span t-field="l.product_id.name"/></td>
                        <td t-if="get_serials(l)" class="text-center" style="width:200px;">
                            <span t-esc="get_serials(l)"/>
                        </td>
                        <td t-else=""> </td>
                        <td class="text-center"><span t-field="l.weight"/> <span t-field="l.weight_uom_id"/></td>
                        <td class="text-center"><span t-field="l.quantity_done"/></td>
                        <td class="text-center"><span t-field="l.product_uom"/></td>
                    </tr>
                </table>

                <div t-if="o.remarks_pb" style="page-break-after:always"/>
                <div style="margin-top:30px;"><strong>Remarks:</strong></div>
                <div style="border:1px solid #ccc; padding:10px; min-height:50px;">
                    <p t-field="o.note"/>
                </div>

                <div t-if="o.delivery_signatures_pb" style="page-break-after:always"/>
                <table class="delivery_order_signatures" style="margin-top:50px;">
                    <tr>
                        <td class="left-table">
                            <table>
                                <tr>
                                    <td colspan="2" class="text-left" style="padding-bottom:15px;">
                                        <strong>GOODS DELIVERED BY:</strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Name:</td>
                                    <td class="white-box"> </td>
                                </tr>
                                <tr><td colspan="2" style="height:5px;"> </td></tr>
                                <tr>
                                    <td>Contact No:</td>
                                    <td class="white-box"> </td>
                                </tr>
                                <tr><td colspan="2" style="height:5px;"> </td></tr>
                                <tr>
                                    <td>Date:</td>
                                    <td class="white-box"> </td>
                                </tr>
                                <tr>
                                    <td colspan="2">Signature:</td>
                                </tr>
                                <tr>
                                    <td colspan="2"  class="white-box signature"> </td>
                                </tr>
                            </table>
                        </td>
                        <td width="2%"> </td>
                        <td class="right-table">
                            <table>
                                <tr>
                                    <td colspan="2" class="text-left" style="padding-bottom:15px;">
                                        <strong>GOODS RECEIVED IN GOOD CONDITION BY:</strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Name:</td>
                                    <td class="white-box"> </td>
                                </tr>
                                <tr><td colspan="2" style="height:3px;"/></tr>
                                <tr>
                                    <td>Contact No.:</td>
                                    <td class="white-box"> </td>
                                </tr>
                                <tr><td colspan="2" style="height:5px;"> </td></tr>
                                <tr>
                                    <td>Date:</td>
                                    <td class="white-box"> </td>
                                </tr>
                                <tr>
                                    <td colspan="2">Signature:</td>
                                </tr>
                                <tr>
                                    <td colspan="2"  class="white-box signature"> </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="footer bbis-tax-invoice-footer text-center">
            <div style="border-top: 1px solid black;" />
            <p style="font-size:10pt; margin:5px 0 0 0">Should you have any enquiries concerning this Delivery Order, please call Operation department at + 971 2 555 4991</p>
            <div>
                <strong>Thank you for your business!</strong>
            </div>
        </div>
    </template>

    <template id="delivery_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="bbis_reports.delivery_order_document" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template><!-- End: Report Template -->
</odoo>