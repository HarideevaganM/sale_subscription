<odoo>
    <data>
        <!--Inherit quotations search view-->
       <record id="bbis_sale_order_line_inherit_search" model="ir.ui.view">
            <field name="name">bbis.sale.order.line.search.filter</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_sales_order_line_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search/group" position="before">
                    <field name="product_id" invisible="1"/>
                    <field name="price_unit" invisible="1"/>
                    <filter name="product_price" string="Product and Price" domain="[]" />
<!--                    context="{'group_by': ['product_id', 'price_unit']}"-->
                </xpath>
            </field>
       </record>

    </data>
</odoo>