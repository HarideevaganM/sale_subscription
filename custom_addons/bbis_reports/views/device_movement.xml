<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="repair.action_repair_order_tree" model="ir.actions.act_window">
            <field name="view_id" ref="repair.view_repair_order_tree"/>
        </record>

        <record id="view_repair_order_device_movement_tree" model="ir.ui.view">
            <field name="name">repair.order.device.movement.tree</field>
            <field name="model">repair.order</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Device/Vehicle Movement">
                    <field name="create_date" />
                    <field name="customer_support_id" string="Work Order No."/>
                    <field name="support_id" string="Ticket No."/>
                    <field name="name" string="RMA No."/>
                    <field name="lot_id" string="Old Device No."/>
                    <field name="new_device_no_tmp"/>
                    <field name="old_vehicle_tmp"/>
                    <field name="new_vehicle_tmp"/>
                    <field name="old_location_tmp"/>
                    <field name="new_location_tmp"/>
                    <field name="state" invisible="1"/>
                    <field name="repair_job_type" invisible="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="repair_order_device_movement_search_view">
            <field name="name">repair.order.device.movement.search</field>
            <field name="model">repair.order</field>
            <field name="arch" type="xml">
                <search>
                    <field name="lot_id"/>
                    <field name="product_id"/>

                    <group expand="0" string="Group By">
                       <filter string="Device Serial No" context="{'order_by':'create_date', 'group_by':'lot_id'}" name="group_lot_id"/>
                       <filter string="Job Type" context="{'group_by':'repair_job_type'}" name="job_type"/>
                       <filter string="Old Location" context="{'group_by':'location_id'}" name="location_id"/>
                       <filter string="New Location" context="{'group_by':'location_dest_id '}" name="location_dest_id "/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_repair_order_device_movement_report">
             <field name="name">Device Movement</field>
             <field name="res_model">repair.order</field>
             <field name="search_view_id" ref="repair_order_device_movement_search_view"/>
             <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_lot_id':0}</field>
         </record>

        <record id="action_repair_order_device_movement_tree_add" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
             <field name="view_mode">tree</field>
             <field name="view_id" ref="view_repair_order_device_movement_tree" />
             <field name="act_window_id" ref="action_repair_order_device_movement_report" />
        </record>

        <menuitem action="action_repair_order_device_movement_report" id="menu_action_repair_order_device_movement_report" parent="repair.menu_repair_order" groups="stock.group_stock_user" name="Device Movement" sequence="20"  />
        <menuitem action="repair.action_repair_order_tree" id="repair.menu_action_action_repair_order_tree1" parent="repair.menu_repair_order" groups="stock.group_stock_user" sequence="0" name="Device Maintenance"  />
    </data>
</odoo>