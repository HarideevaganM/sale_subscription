<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="inclusive_invoice_line_form_view">
            <field name="name">inclusive.invoice.line.form</field>
            <field name="model">inclusive.invoice.line</field>
            <field name="arch" type="xml">
                <form string="Account Invoice Lines">
                    <group>
                        <field name="name"/>
                        <field name="invoice_line_ids" domain="[('invoice_id', '=', parent.id)]" context="{'search_default_invoice_id': parent.id, 'tree_view_ref':'bbis_reports.inclusive_account_invoice_line_tree'}" options="{'no_create': True}">
                            <tree string="Invoice Lines">
                                <field name="product_id"/>
                                <field name="price_unit"/>
                            </tree>
                        </field>
                        <field name="quantity" attrs="{'invisible': [('parent.sale_type', '=', 'pilot')]}"/>
                        <field name="group_quantity" attrs="{'invisible': [('parent.sale_type', '!=', 'pilot')]}"/>
                        <field name="price_unit" invisible="1"/>
                        <field name="price_tax" invisible="1"/>
                        <field name="price_subtotal" invisible="1"/>
                        <field name="price_total" invisible="1"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- Change the number of columns of Account Invoice Line when adding products -->
        <record model="ir.ui.view" id="inclusive_account_invoice_line_tree">
            <field name="name">inclusive.account.move.line.tree</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="price_unit"/>
                    <field name="quantity"/>
                    <field name="discount_fix"/>
                    <field name="invoice_line_tax_ids" widget="many2many_tags"/>
                    <field name="price_subtotal"/>
                </tree>
            </field>
        </record>

        <!-- Add search filter for Inclusive Invoice Lines -->
        <record model="ir.ui.view" id="bbis_inclusive_invoice_lines_search_view">
            <field name="name">bbis.account.move.line</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <search>
                    <field name="invoice_id"/>
                    <group string="Group By">
                        <filter name="product_price" string="Product and Price" context="{'group_by': ['product_id','price_unit']}"/>
                        <filter name="product_id" string="Product" context="{'group_by': 'product_id'}"/>
                    </group>
                </search>

            </field>
        </record>
    </data>
</odoo>