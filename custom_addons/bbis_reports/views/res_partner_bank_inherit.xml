<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--  Res.Partner.Bank  -->
        <record model="ir.ui.view" id="bbis_res_partner_bank_form_inherit">
            <field name="name">bbis.res.partner.bank.form.inherit</field>
            <field name="model">res.partner.bank</field>
            <field name="inherit_id" ref="base.view_partner_bank_form"/>
            <field name="arch" type="xml">
                <field name="acc_number" position="after">
                    <field name="iban"/>
                    <!--
                    <field name="swift_code"/>
                    -->
                </field>
            </field>
        </record>

        <!--  Res.Bank  -->
        <record model="ir.ui.view" id="bbis_res_bank_form_inherit">
            <field name="name">bbis.res.bank.form.inherit</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_form"/>
            <field name="arch" type="xml">
                <field name="bic" position="attributes">
                    <attribute name="string">Bank Identifier/Swift Code</attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>
