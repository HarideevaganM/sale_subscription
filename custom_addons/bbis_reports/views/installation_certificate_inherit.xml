<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <!-- Inherit Installation Certificate Tree -->
        <record id="installation_certificate_tree_inherit" model="ir.ui.view">
            <field name="name">installation.certificate.tree.inherit</field>
            <field name="model">installation.certificate</field>
            <field name="inherit_id" ref="fms_sale.installation_certificate_tree"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="create_date"/>
                </field>
            </field>
        </record>

        <!-- Add search filter for Job Card -->
        <record id="bbis_installation_certificate_search" model="ir.ui.view">
            <field name="name">bbis.installation.certificate.search</field>
            <field name="model">installation.certificate</field>
            <field name="arch" type="xml">
                <search>
                    <field name="vehicle_number"/>
                    <field name="serial_no"/>
                    <field name="partner_id"/>
                    <field name="name"/>
                    <separator/>
                    <filter string="Renewal Certificates" name="renewal_certificates" domain="[('subscription_id', '!=', False)]"/>
                    <filter string="New Sale Certificates" name="new_sale_certificates" domain="[('subscription_id', '=', False)]"/>
                    <group>
                         <filter string="Partner" name="partner_group" context="{'group_by':'partner_id'}"/>
                         <filter string="Vehicle" name="vehicle_number_group" context="{'group_by':'vehicle_number'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_sub_renewal_certificates" model="ir.actions.act_window">
            <field name="name">Subscription Renewal Certificates</field>
            <field name="res_model">installation.certificate</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_renewal_certificates':1, 'search_default_partner_group':1}</field>
        </record>

        <!-- Add RMA Closed Date under Installation Date in Installation Certificate Screen.-->
        <record id="bbis_installation_certificate_inherit" model="ir.ui.view">
            <field name="name">bbis.installation.certificate.inherit</field>
            <field name="model">installation.certificate</field>
            <field name="inherit_id" ref="fms_sale_extended.installation_certificate_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='subscription_id']" position="before">
                    <field name='rma_closed_date'/>
                </xpath>
            </field>
        </record>

        <!-- Add new renewal menu in Job Card -->
        <menuitem id="menu_jobs_certificate_root" name="Certificates" parent="odoo_job_costing_management.menu_job_managmt" sequence="3"/>
        <menuitem id="menu_renewal_certificate_in_jobs" name="Installation Certificates" action="action_sub_renewal_certificates" parent="menu_jobs_certificate_root" sequence="1"/>
    </data>
</odoo>