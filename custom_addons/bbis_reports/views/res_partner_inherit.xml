<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="bbis_res_partner_tree_inherit">
            <field name="name">bbis.res.partner.tree.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <field name="email" position="after">
                    <field name="customer_id"/>
                </field>

                <xpath expr="//field[@name='email']" position="after">
                    <field name="customer_class"/>
                </xpath>

                <xpath expr="//tree" position="attributes">
                    <attribute name="decoration-success">customer_class=='class_a'</attribute>
                    <attribute name="decoration-info">customer_class=='class_b'</attribute>
                    <attribute name="decoration-warning">customer_class=='class_c'</attribute>
                    <attribute name="decoration-danger">customer_class=='class_x'</attribute>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="bbis_res_partner_form_inherit">
            <field name="name">bbis.res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <field name="property_account_payable_id" position="after">
                    <field name="accounting_person"/>
                </field>
            </field>
        </record>

        <record id="bbis_res_partner_base_form_inherit" model="ir.ui.view">
            <field name="name">bbis.res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='function']" position="before">
                    <field name="customer_class" attrs="{'readonly':1}"/>
                </xpath>
            </field>
        </record>

        <record id="bbis_res_partner_form_disable_fields" model="ir.ui.view">
            <field name="name">bbis.res.partner.form.disable.fields</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="bbis_reports.bbis_res_partner_base_form_inherit"/>
            <field name="groups_id" eval="[(6, 0, [ref('account.group_account_manager'), ref('sales_team.group_sale_manager')])]" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='customer_class']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
