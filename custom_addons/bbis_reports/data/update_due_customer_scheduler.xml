<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">

        <!-- Scheduler for updating the customer to X - Class who have the due days more than 120.-->
        <record id="update_due_customers" model="ir.cron">
            <field name="name">Update Due Customers</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.update_due_customers()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>

    </data>
</odoo>