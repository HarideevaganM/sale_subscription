<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="bbis_sales_subscription_renewal_list_view" model="ir.ui.view">
        <field name="name">Sales Subscription Renewal List View</field>
        <field name="model">bbis.sales.subscription.renewal.update</field>
        <field name="arch" type="xml">
           <form striing="Update Sale Type">
               <sheet>
                  <group>
                      <group>
                          <field name="file" filename="file_name"/>
                          <field name="file_name" invisible="1"/>
                      </group>
                  </group>
                  <field name="sale_subscription_ids">
                      <tree create="false" editable="top" delete="false">
                          <field name="code" readonly="1"/>
                          <field name="partner_id" readonly="1"/>
                          <field name="serial_no" readonly="1"/>
                          <field name="date_start"/>
                          <field name="subscription_period"/>
                          <field name="recurring_total"/>
                          <field name="sale_type"/>
                          <field name="auto_bill"/>
                          <field name="is_fls"/>
                      </tree>
                  </field>

                  <group>
                      <group>
                        <field name="sale_type"/>
                        <field name="auto_bill"/>
                        <field name="auto_fls"/>
                      </group>
                       <group>
                        <field name="sales_tag"/>
                        <field name="sub_status"/>
                      </group>
                  </group>

                   <footer>
                       <button name="update_sale_type" string="Update" type="object" class="oe_right oe_highlight"/>
                       <button string="Close" class="btn-default" special="cancel" />
                   </footer>

               </sheet>
           </form>
        </field>
        </record>

        <act_window
            name="Update Sale Type"
            res_model="bbis.sales.subscription.renewal.update"
            src_model="sale.subscription"
            view_mode="form"
            view_type = "form"
            target="new"
            key2="client_action_multi"
            id="action_bbis_sales_subscription_renewal_wizard"
            multi="True" />

    </data>
</odoo>