<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bbis_print_multiple_job_cards" model="ir.ui.view">
            <field name="name">Print Multiple Job Cards</field>
            <field name="model">job.card.print_multiple_job_cards</field>
            <field name="arch" type="xml">
            <form string="Print Multiple Job Cards">
                <field name="job_card_ids">
                    <tree string="Selected Job Cards" decoration-success="state=='done'" decoration-danger="state=='open'" decoration-info="state=='submitted'">
                        <field name="company_id"/>
                        <field name="name"/>
                        <field name="state"/>
                    </tree>
                </field>
                <footer>
                    <button name="print_job_cards" string="Print Job Cards" type="object" class="btn-primary"/>
                    <button string="Close" class="btn-default" special="cancel" />
                </footer>
            </form>
            </field>
        </record>

        <act_window name="Print Multiple Job Cards"
            res_model="job.card.print_multiple_job_cards"
            src_model="job.card"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="act_bbis_print_multiple_job_cards"
            multi="True"/>
    </data>
</odoo>
