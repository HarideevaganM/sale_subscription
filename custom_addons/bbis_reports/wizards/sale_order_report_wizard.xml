<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bbis_sales_report_wizard_form" model="ir.ui.view">
            <field name="name">BBIS Sales Report</field>
            <field name="model">bbis.sale.order.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Sales Report">
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="sales_person" widget="many2many_tags" readonly="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_xlsx_report" string="Export to Excel" type="object" class="btn-primary"/>
                        <button string="Close" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="bbis_sales_report_wizard_form_manager" model="ir.ui.view">
            <field name="name">BBIS Sales Report Manager</field>
            <field name="model">bbis.sale.order.report.wizard</field>
            <field name="inherit_id" ref="bbis_reports.bbis_sales_report_wizard_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('sales_team.group_sale_manager'), ref('account.group_account_manager')])]" />
            <field name="arch" type="xml">
                <field name="sales_person" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
            </field>
        </record>

        <record id="action_bbis_sale_order_line_report" model="ir.actions.act_window">
            <field name="name">BBIS Sales Report</field>
            <field name="res_model">bbis.sale.order.report.wizard</field>
            <!--          <field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="bbis_sales_report_wizard_form"/>
        </record>

        <menuitem id="bbis_menu_report_sale_report"
            name="Sales Report (BBIS)"
            action="action_bbis_sale_order_line_report"
            parent="sale.menu_sale_report"
            groups="sales_team.group_sale_manager,sales_team.group_sale_salesman"
            sequence="5"/>
    </data>
</odoo>