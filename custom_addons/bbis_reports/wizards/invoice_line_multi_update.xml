<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bbis_invoice_line_multi_update_form" model="ir.ui.view">
            <field name="name">Invoice Line Multi Update Form</field>
            <field name="model">bbis.invoice.line.multi.update</field>
            <field name="arch" type="xml">
                <form string="Invoice Line Multi Update">
                    <group>
                        <field name="invoice_id"/>
                        <field name="invoice_line_ids" domain="[('invoice_id','=',invoice_id)]" options="{'no_create': True}">
                            <tree>
                                <field name="product_id"/>
                                <field name="name"/>
                                <field name="quantity"/>
                                <field name="price_unit"/>
                            </tree>
                        </field>
                        <field name="price"/>
                    </group>

                    <footer>
                        <button name="update_price" string="Update Price" type="object" class="btn-primary"/>
                        <button string="Close" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_bbis_invoice_line_multi_update" model="ir.actions.act_window">
            <field name="name">Invoice Lines Update</field>
            <field name="res_model">bbis.invoice.line.multi.update</field>
            <!--          <field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="bbis_invoice_line_multi_update_form"/>
            <field name="binding_model_id" ref="model_account_invoice" />
        </record>
    </data>
</odoo>