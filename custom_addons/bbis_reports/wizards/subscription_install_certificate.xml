<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="subscription_install_certificates_form" model="ir.ui.view">
            <field name="name">Wizard: Subscription Install Certificates</field>
            <field name="model">subscription.install.certificate</field>
            <field name="arch" type="xml">
                <form string="Update Invoice Status">
                    <field name="subscription_ids" context="{'tree_view_ref':'bbis_reports.bbis_sales_subscription_tree_for_jobs'}" options="{'no_create': True}">
                        <tree>
                            <field name="code"/>
                            <field name="partner_id"/>
                            <field name="vehicle_number"/>
                            <field name="serial_no"/>
                            <field name="subscription_status"/>
                        </tree>
                    </field>
                    <footer>
                        <button name="install_certificates" string="Install Certificate" type="object" class="btn-primary"/>
                        <button string="Close" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_subscription_install_certificates" model="ir.actions.act_window">
            <field name="name">Subscription Install Certificates</field>
            <field name="res_model">subscription.install.certificate</field>
            <!--          <field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="subscription_install_certificates_form"/>
        </record>

        <menuitem id="menu_subscription_in_jobs" name="Install Renewal Certificate" action="action_subscription_install_certificates" parent="bbis_reports.menu_jobs_certificate_root" sequence="2"/>
    </data>
</odoo>