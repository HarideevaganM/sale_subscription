<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="bbis_sales_subscription_inherited_list_view" model="ir.ui.view">
        <field name="name">Sales Subscription Inherited List View</field>
        <field name="model">bbis.sales.subscription.update</field>
        <field name="arch" type="xml">
           <form striing="Update Sales Subscriptions">
               <sheet>
                   <field name="file" filename="file_name"/>
                   <field name="file_name" invisible="1"/>
                   <field name="sale_subscription_ids">
                       <tree create="false" editable="top" delete="false">
                           <field name="code" readonly="1"/>
                           <field name="partner_id" readonly="1"/>
                           <field name="date_start"/>
                           <field name="subscription_period"/>
                           <field name="store_end_date"/>
                           <field name="recurring_total"/>
                       </tree>
                   </field>

                  <group>
                      <group>
                        <field name="period_date_start"/>
                        <field name="subscription_date_start"/>
                        <field name="subscription_end_date" readonly="1" force_save="1"/>
                        <field name="renewal_date" invisible="1" force_save="1"/>
                        <field name="recurring_next_date"/>
                        <field name="product_id"/>
                        <field name="period_end_date" invisible="1" force_save="1"/>
                      </group>
                      <group>
                        <field name="period" readonly="1" force_save="1"/>
                        <field name="template_id"/>
                        <field name="amount"/>
                      </group>
                  </group>

                   <footer>
                       <button name="update_amount" string="Update" type="object" class="oe_right oe_highlight"/>
                       <button string="Close" class="btn-default" special="cancel" />
                   </footer>

               </sheet>
           </form>
        </field>
        </record>

        <act_window
            name="Update Subscription"
            res_model="bbis.sales.subscription.update"
            src_model="sale.subscription"
            view_mode="form"
            view_type = "form"
            target="new"
            key2="client_action_multi"
            id="action_bbis_sales_subscription_wizard"
            multi="True" />

    </data>
</odoo>