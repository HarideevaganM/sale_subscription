<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="job_card_print_installation_certificates" model="ir.ui.view">
            <field name="name">Print Installation Certificates</field>
            <field name="model">job.card.print_installation_certificates</field>
            <field name="arch" type="xml">
            <form string="Print Installation Certificates">
                <field name="job_card_ids">
                    <tree string="Selected Job Cards" decoration-success="state=='done'" decoration-danger="state=='open'" decoration-info="state=='submitted'">
                        <field name="company_id"/>
                        <field name="name"/>
                        <field name="state"/>
                    </tree>
                </field>
                <footer>
                    <button name="print_installation_certificates" string="Print Installation Certificates" type="object" class="btn-primary"/>
                    <button string="Close" class="btn-default" special="cancel" />
                </footer>
            </form>
            </field>
        </record>

        <act_window name="Print Installation Certificates"
            res_model="job.card.print_installation_certificates"
            src_model="job.card"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="act_job_card_print_installation"
            multi="True"/>

    </data>
</odoo>
