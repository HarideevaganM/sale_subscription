<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="bbis_support_ticket_inherited_list_view" model="ir.ui.view">
        <field name="name">Support Ticket Inherited List View</field>
        <field name="model">bbis.support.ticket.update</field>
        <field name="arch" type="xml">
           <form striing="Update Support Tickets">
               <sheet>

                  <field name="support_ticket_ids">
                     <tree create="false" editable="top" delete="false">
                        <field name="customer_support_id" readonly="1"/>
                        <field name="ticket_number" readonly="1"/>
                        <field name="partner_id"/>
                        <field name="vehicle_id"/>
                     </tree>
                  </field>

                  <group>
                      <group>
                        <field name="schedule_date"/>
                        <field name="ticket_create_date"/>
                      </group>
                      <group>
                        <field name="engineer_id"/>
                      </group>
                  </group>

                   <footer>
                       <button name="update_ticket" string="Update" type="object" class="oe_right oe_highlight"/>
                       <button string="Close" class="btn-default" special="cancel" />
                   </footer>

               </sheet>
           </form>
        </field>
        </record>

        <act_window
            name="Update Support Ticket"
            res_model="bbis.support.ticket.update"
            src_model="website.support.ticket"
            view_mode="form"
            view_type = "form"
            target="new"
            key2="client_action_multi"
            id="action_bbis_support_ticket_wizard"
            multi="True" />

    </data>
</odoo>