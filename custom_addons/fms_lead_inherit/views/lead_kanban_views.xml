        <record id="view_crm_lead_form_inherit" model="ir.ui.view">
            <field name="name">crm.lead.lead.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='lead']/group/group[2]" position="replace">
                    <group>
                        <field name="contact_name" invisible="1"/>
                        <field name="email_from" widget="email"/>
                        <field name="function"/>
                        <field name="phone" widget="phone"/>
                        <field name="mobile"/>
                    </group>
                </xpath>
                <field name="partner_name" position="after">
                    <field name="contact_name" string="Company Name"/>
                </field>
                <field name="partner_name" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>


