<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
            <record id="renewal_cycle_action" model="ir.actions.act_window">
            <field name="name">Renewal Order</field>
            <field name="res_model">renewal.contract</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="renewal_cycle_form_view" model="ir.ui.view">
            <field name="name">Renewal</field>
            <field name="model">renewal.contract</field>
            <field name="arch" type="xml">
                <form create="false">
                    <header>
                        <button name="to_confirm" type="object" string="Confirm" class="oe_highlight" attrs="{'invisible': [('state', 'in', ('cancel','renewed','in_progress','quotation'))]}"/>
                         <field name="state" widget="statusbar" statusbar_visible="to_renew,renewed"/>
                        <button name="confirm_renewal" type="object" string="Confirm Renewal" class="oe_highlight" states="in_progress"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="renewal_contract_view"
                            class="oe_stat_button"
                            icon="fa-copy"
                            type="object"
                                    attrs="{'invisible': [('quotation_count', '=', 0)]}">
                            <field name="quotation_count" widget="statinfo" string="Quotation"/>

                            </button>

                        </div>

                          <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                          </div>
                        <group>
                            <group>
                                <field name="contract_id" required="1"  attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="sale_order_id" required="1"  attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name ="partner_id" required="1"  attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="start_date" required="1"  attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="company_id" invisible="1"/>
                                <field name="sale_type" invisible="1"/>
                                 <field name="renew_from_date" attrs="{'invisible': [('sale_type', '=', 'lease')],'readonly':[('state','!=','to_renew')]}"/>


                            </group>
                            <group>
                                <field name="project_id" required="1" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="invoice_date" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="end_date" required="1" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="renew_to_date" attrs="{'invisible': [('sale_type', '=', 'lease')],'readonly':[('state','!=','to_renew')]}"/>
                                 <field name="is_direct_payment" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>

                            </group>
                        </group>
                        <notebook>
                            <page string="Contract History">
                                <field name="renewal_line" mode="tree,kanban" readonly="1">
                                    <form string="Renewal Order Lines" >
                                        <group>
                                            <group>
                                                <field name="line_id" invisible="1"/>
                                                <field name="contract_id" required="1" readonly="1"/>
                                                <field name="contract_start_date" required="1" readonly="1"/>
                                                <field name="contract_end_date" required="1" readonly="1"/>
                                                <field name="quantity" readonly="1"/>
                                                <field name="total" readonly="1"/>

                                            </group>
                                        </group>
                                    </form>
                                    <tree string="Renewal Order Lines" readonly="1">
                                        <field name="line_id" invisible="1"/>
                                            <field name="contract_id" required="1" readonly="1"/>
                                            <field name="contract_start_date" required="1" readonly="1"/>
                                            <field name="contract_end_date" required="1" readonly="1"/>
                                            <field name="quantity" readonly="1"/>
                                            <field name="total" readonly="1"/>

                                    </tree>
                                </field>


                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="renewal_cycle_tree_view" model="ir.ui.view">
            <field name="name">Renewal Contract Tree</field>
            <field name="model">renewal.contract</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="name"/>
                    <field name ="partner_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>



        <!--MONTHLY RENEWAL LIST-->
        <record id="renewal_list_form" model="ir.ui.view">
            <field name="name">renewal</field>
            <field name="model">renewal.list</field>
            <field name="arch" type="xml">
                <form string="Renewal List" create="false">
                    <header>
                         <button name="respond_to_customer" string="Notify Client" type="object" class="oe_highlight" states="to_renew"/>
                        <button name="create_renewal" string="Create Renewal" class="oe_highlight" type="object" attrs="{'invisible': ['|',('sale_type', '=', 'lease'),('state', '!=', 'client respond')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="to_renew,renewed"/>
                        <button name="reject_renewal" type="object" string="Remove" class="oe_highlight" attrs="{'invisible': ['|',('sale_type', '=', 'lease'),('state', '!=', 'to_renew')]}"/>
                        <button name="transfer_ownership" type="object" string="Transfer Ownership" class="oe_highlight" attrs="{'invisible': ['|',('sale_type', '!=', 'lease'),('state','=','owned')]}"/>
                        <button name="customer_respond" string="Client Respond" type="object" class="oe_highlight" states="notified client"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="sale_view"
                            class="oe_stat_button"
                            icon="fa-times-circle"
                            type="object"
                                    attrs="{'invisible': [('removal_count', '=', 0)]}">
                            <field name="removal_count" widget="statinfo" string="Remove"/>

                            </button>

                            <button name="renewal_view"
                            class="oe_stat_button"
                            icon="fa-arrow-circle-right"
                            type="object"
                                    attrs="{'invisible': [('renewal_count', '=', 0)]}" >
                            <field name="renewal_count" widget="statinfo" string="Renewal"/>

                            </button>

                        </div>
                        <group>
                            <group>
                                <field name="name" required="1" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="project_id" required="1" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="partner_id" required="1" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="contract_from_date" required="1" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                 <field name="sale_type" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="Contract_po_reference" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="direct_partner_type" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>

                                <field name="installation_date" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                            </group>
                            <group>
                                 <label for="installation_street" string="Installation Address"/>
                                <div>
                                    <field name="installation_street" required="1" placeholder="Street..."  attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                    <field name="installation_street2" required="1" placeholder="Street..."  attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                    <div class="address_format">
                                        <field name="installation_city" placeholder="City" style="width: 40%" required="1"  attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                        <field name="installation_state_id" required="1" class="oe_no_button" placeholder="State" style="width: 37%" options="{&quot;no_open&quot;: True}"  attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                        <field name="installation_zip" required="1" placeholder="ZIP" style="width: 20%"  attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                    </div>
                                    <field name="installation_country_id" required="1" placeholder="Country" class="oe_no_button" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"  attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                </div>
                                 <field name="invoice_date" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="is_renew" invisible="1"/>
                                 <field name="is_expired" invisible="1"/>
                                <field name="sale_order_id" required="1" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="contract_to_date" required="1" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="contract_id" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="remaining_days"/>
                                <field name="billing_cycle_type"  attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="billing_date"  attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="credit_period"  attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="check_renewal_type" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="product_ownership_period"  attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="division_billing"  attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                            </group>
                        </group>
                        <notebook>
					<page string="Product Details">
						<field name="contract_line" widget="one2many_list"  attrs="{'readonly': [('state', '!=', 'to_renew')]}">
                            <tree string="Product Details" editable="bottom">
								<field name="product_id"/>
								<field name="renewal_id" invisible="1"/>
								<field name="name"/>
								<field name="product_uom_qty"/>
								<field name="product_uom"/>
								<field name="price_unit"/>
								<field name="price_subtotal"/>
							</tree>
                        </field>
					</page>
				</notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="renewal_list_tree_view" model="ir.ui.view">
            <field name="name">Renewal List Tree</field>
            <field name="model">renewal.list</field>
            <field name="arch" type="xml">
                <tree create="false">
                     <field name="name"/>
                    <field name="partner_id"/>
                    <field name="project_id"/>
                    <field name="contract_from_date"/>
                    <field name="contract_to_date"/>
                    <field name="sale_order_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="renewal_list_action" model="ir.actions.act_window">
            <field name="name">Renewal List</field>
            <field name="res_model">renewal.list</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_renew','!=', False)]</field>
        </record>



        <!--OVERALL RENEWAL-->
            <record id="renewal_overall_list_form" model="ir.ui.view">
                <field name="name">renewal</field>
                <field name="model">renewal.list</field>
                <field name="arch" type="xml">
                    <form string="Renewal List">
                        <header>
                            <field name="state" widget="statusbar" statusbar_visible="to_renew,renewed"/>
                        </header>
                        <sheet>

                            <group>
                                <group>
                                    <field name="name" required="1" />
                                    <field name="project_id" required="1"/>
                                    <field name="contract_from_date" required="1"/>
                                </group>
                                <group>
                                     <field name="invoice_date"/>
                                    <field name="is_renew" readonly="1"  invisible="1"/>
                                    <field name="is_expired" invisible="1"/>
                                    <field name="sale_order_id" required="1"/>
                                    <field name="contract_to_date" required="1"/>
                                </group>
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>

            <record id="renewal_overall_list_tree_view" model="ir.ui.view">
                <field name="name">Renewal List Tree</field>
                <field name="model">renewal.list</field>
                <field name="arch" type="xml">
                    <tree>
                         <field name="name"/>
                        <field name="project_id"/>
                        <field name="contract_from_date"/>
                        <field name="contract_to_date"/>
                        <field name="sale_order_id"/>
                    </tree>
                </field>
            </record>

            <record id="renewal_action" model="ir.actions.act_window">
                <field name="name">Renewal List</field>
                <field name="res_model">renewal.list</field>
                <field name="view_mode">tree,form</field>
                <field name="domain">[('state','=','expired')]</field>
            </record>
            <menuitem id="renewal_process"
                      name="Expired Contracts"
                      action ="renewal_action"
                      parent="sale.sale_order_menu"
                      groups ="sales_team.group_sale_salesman_all_leads"
                      sequence="4"/>
          <!--SUBSCRIPTION-->
            <record id="subscription_renewal_action" model="ir.actions.act_window">
                <field name="name">Subscription Renewal List</field>
                <field name="res_model">subscription.list</field>
                <field name="view_mode">tree,form</field>
                <field name="domain">[('is_sub_renew','=',True)]</field>
            </record>

        <record id="subscription_renewal_tree_view" model="ir.ui.view">
                <field name="name">Renewal List Tree</field>
                <field name="model">subscription.list</field>
                <field name="arch" type="xml">
                    <tree create="false">

                         <field name="name"/>
                        <field name="partner_id"/>
                        <field name="serial_no"/>
                        <field name="vehicle_id"/>
                        <field name="validate_date"/>
                        <field name="recurring_date"/>
                        <field name="validate_by"/>
                        <field name="recurring_total"/>
                        <field name="state"/>
                    </tree>
                </field>
            </record>
        <record id="subscription_renewal_list_form" model="ir.ui.view">
            <field name="name">renewal</field>
            <field name="model">subscription.list</field>
            <field name="arch" type="xml">
                <form string="Renewal List" create="false">
                    <header>

                        <field name="state" widget="statusbar" statusbar_visible="to_renew,renewed"/>
                        <button name="respond_to_customer" string="Notify Client" type="object" class="oe_highlight" states="to_renew"/>
                        <button name="customer_respond" string="Client Respond" type="object" class="oe_highlight" states="notified client"/>

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="partner_id" required="1" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="subscription_id" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="subscription_from_date" required="1" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="invoice_type" widget="radio" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="start_date" attrs="{'invisible': [('invoice_type', '!=', 'mid')]}"/>
				                <field name="end_date" attrs="{'invisible': [('invoice_type', '!=', 'mid')]}"/>
                                <field name="subscription_renew_date_from" attrs="{'invisible': [('state','!=','client respond')], 'required': [('state','=','client respond')]}"/>
                                 <field name="sale_type" invisible="1" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="vehicle_id" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="validate_date" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="recurring_date" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                            </group>
                            <group>
                                <field name="invoice_date" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="template_id" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="is_sub_renew"  invisible="1"/>
                                <field name="is_expired" invisible="1"/>
                                <field name="sale_order_id"  attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="subscription_to_date" required="1" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="remaining_days"/>
                                <field name="subscription_renew_date_to" attrs="{'invisible': [('state','!=','client respond')], 'required': [('state','=','client respond')]}"/>
                                <field name="serial_no" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                <field name="validate_by" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                            </group>
                        </group>
                        <notebook>
                        <page string="Subscription Lines" id="lines">
                            <div>
                                <field name="subscription_line" attrs="{'readonly': [('state', '!=', 'to_renew')]}">
                                    <tree editable="bottom">
                                        <field name="product_id" context="{'default_recurring_invoice': True}"/>
                                        <field name="name"/>
                                        <field name="quantity"/>
                                        <field name="uom_id" groups="product.group_uom"/>
                                        <field name="price_unit"/>
                                        <field name="discount" groups="sale.group_discount_per_so_line"/>
                                        <field name="price_subtotal"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="recurring_total" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}" modifiers="{'readonly': true}"/>
                                </group>
                            </div>
                        </page>
                            <page string="Settings" id="settings">
                                <group>
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                    <field name="analytic_account_id" groups="analytic.group_analytic_accounting" attrs="{'readonly': [('state', '!=', 'to_renew')]}"/>
                                </group>
                                <group>
                                </group>
                        </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


<menuitem id="renewal_menus"
                  name="Renewal"
                    parent="sale_subscription.menu_sale_subscription_root"
                   sequence="12"/>

         <menuitem id="renewal_details"
                  name="Renewal Order"
                  action ="renewal_cycle_action"
                    parent="renewal_menus"
                   sequence="12"/>
        <menuitem id="subscription_process_accounts"
                      name="Subscription Renewal List"
                      action ="subscription_renewal_action"
                       parent="renewal_menus"

                      sequence="10"/>
        <menuitem id="renewal_account_list"
                  name="Contract Renewal List"
                  action ="renewal_list_action"
                  parent="renewal_menus"

                  sequence="9"/>
    </data>
</odoo>
