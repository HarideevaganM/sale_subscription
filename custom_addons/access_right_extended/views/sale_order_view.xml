<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
         <!-- delivery button hide -->
        <record id="view_order_form_sale_stock_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_view_delivery']" position="attributes">
                    <attribute name="groups">access_right_extended.group_hide_menus_stock_account_job</attribute>
                </xpath>
            </field>
        </record>

        <!-- Create invoice button hide -->
        <record id="sale_order_form_inherit_id_fms_sale" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="fms_sale.sale_order_form_inherit_id"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='%(sale.action_view_sale_advance_payment_inv)d']" position="attributes">
                    <attribute name="groups">access_right_extended.group_hide_menus_stock_account_job</attribute>
                </xpath>
            </field>
        </record>

        <record id="sale_order_view_form_sale_managment" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_management.sale_order_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='%(sale.action_view_sale_advance_payment_inv)d'][1]" position="replace"> 
                       <button name="%(sale.action_view_sale_advance_payment_inv)d" string="Create Invoice"
                        type="action" class="btn-primary"
                        attrs="{'invisible': [('invoice_status', '!=', 'to invoice')]}" groups="access_right_extended.group_hide_menus_stock_account_job"/>
                </xpath>
                <xpath expr="//button[@name='%(sale.action_view_sale_advance_payment_inv)d'][2]" position="replace"> 
                    <button name="%(sale.action_view_sale_advance_payment_inv)d" string="Create Invoice"
                        type="action" context="{'default_advance_payment_method': 'percentage'}"
                        attrs="{'invisible': ['|',('invoice_status', '!=', 'no'), ('state', '!=', 'sale')]}" groups="access_right_extended.group_hide_menus_stock_account_job"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
