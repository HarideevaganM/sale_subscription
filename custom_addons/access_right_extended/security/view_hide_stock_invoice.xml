<?xml version="1.0"?>
<odoo>
    <data>
      <record id="group_hide_menus_stock_account_job" model="res.groups">
        <field name="name">Show Account and Stock and Job Menus</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
      </record>
       <record model='ir.ui.menu' id='account.menu_finance'>
          <field name="groups_id" eval="[
            (3, ref('account.group_account_user')), 
            (3, ref('account.group_account_manager')),
            (3, ref('account.group_account_invoice')),
            (3, ref('account.group_account_invoice')),
            (4, ref('group_hide_menus_stock_account_job'))]"/>
      </record>
      <record model='ir.ui.menu' id='stock.menu_stock_root'>
          <field name="groups_id" eval="[
            (3, ref('stock.group_stock_manager')), 
            (3, ref('stock.group_stock_user')),
            (4, ref('group_hide_menus_stock_account_job'))]"/>
      </record>
      <record model='ir.ui.menu' id='odoo_job_costing_management.menu_job_managmt'>
         		<field name="groups_id" eval="[
         			(3, ref('project.group_project_user')),
         			(4, ref('group_hide_menus_stock_account_job'))]"/>
      	</record>
    </data>
</odoo>