<odoo>
    <data>

        <template id="report_hr_work_from_home_document">
            <t t-call="hr_work_from_home.hr_external_layout">
                <div class="page">
                    <div class="row">
                        <div class="col-xs-4">
                            <img src="/hr_work_from_home/static/img/black_box.jpeg" width="250" height="120"/><br/>
                        </div>
                        <div class="col-xs-8" style="height:70px !important; color:white; !important;background-color:#ff5200;important;">
                            <h3 style="line-height:2.6;font-weight: 900;!important;">Work From Home Request Form</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12" style="color:white; !important;background-color:#ff5200;important;font-weight: 900;!important;">
                            EMPLOYEE INFORMATION
                        </div>
                    </div>
                    <div class="row mt8 mb8">
                        <div class="col-xs-1">Name :</div>
                        <div class="col-xs-11" style="border:1px solid black;!important;">
                            <span t-esc="o.employee_id.name"/>
                        </div>
                    </div>
                    <div class="row mt8 mb8">
                        <div class="col-xs-2">Job Title :</div>
                        <div class="col-xs-4" style="border:1px solid black;!important;">
                            <span t-esc="o.job_id.name"/>
                        </div>
                        <div class="col-xs-2">Joining Date:</div>
                        <div class="col-xs-4" style="border:1px solid black;!important;">
                            <span t-esc="o.job_date"/>
                        </div>
                    </div>
                    <div class="row mt8 mb8">
                        <div class="col-xs-2">Department:</div>
                        <div class="col-xs-4" style="border:1px solid black;!important;">
                            <span t-esc="o.department_id.name"/>
                        </div>
                        <div class="col-xs-2">Manager:</div>
                        <div class="col-xs-4" style="border:1px solid black;!important;">
                            <span t-esc="o.user_id.name"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12" style="color:white; !important;background-color:#ff5200;important;font-weight: 900;!important;">
                            WORK FROM HOME DETAILS
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12" style="background-color:#dddddd;important;border:1px solid black;!important;">
                            Date of Request:
                        </div>
                    </div>
                    <div class="row mt8 mb8">
                        <div class="col-xs-1">From:</div>
                        <div class="col-xs-3" style="border:1px solid black;!important;">
                            <span t-esc="o.from_date"/>
                        </div>
                        <div class="col-xs-1">To:</div>
                        <div class="col-xs-3" style="border:1px solid black;!important;">
                            <span t-esc="o.to_date"/>
                        </div>
                        <div class="col-xs-2">No. of Days:</div>
                        <div class="col-xs-2" style="border:1px solid black;!important;">
                            <span t-esc="o.no_of_days"/>
                        </div>
                    </div>
                    <div class="row mt8 mb8">
                        <div class="col-xs-12" style="background-color:#dddddd;important;border:1px solid black;!important;">
                            Purpose / Reason for Working at Home
                        </div>
                        <div class="col-xs-12" style="important;border:1px solid black;!important;height:70px !important;font-size:12px;">
                            <sapn t-esc="o.reason_work_from_home"/> 
                        </div>
                        <div class="col-xs-3" style="important;border:1px solid black;!important;background-color:#dddddd;important;">
                            Remote Work Address:
                        </div>
                        <div class="col-xs-6" style="important;border:1px solid;black;!important;;important;">
                            Khalifa St., Abu Dhabi
                        </div>
                        <div class="col-xs-1" style="important;border:1px solid black;!important;background-color:#dddddd;important;">
                            Phone
                        </div>
                        <div class="col-xs-2" style="important;border:1px solid black;!important;">
                            <span t-esc="o.phone"/>
                        </div>
                    </div>
                    <div class="row mt8 mb8">
                        <div class="col-xs-2">
                            <t t-if="o.leave_type == 'paid'">
                                <input type="checkbox" checked="checked" style="height:20px; !important;width:20px;!important; border:1px solid black;!important;"/>  Paid
                            </t>
                            <t t-if="o.leave_type != 'paid'">
                                <input type="checkbox" style="height:20px; !important;width:20px;!important; border:1px solid black;!important;"/>  Paid
                            </t>
                        </div>
                        <div class="col-xs-2">
                            <t t-if="o.leave_type == 'unpaid'">
                                <input type="checkbox" checked="checked" style="height:20px; !important;width:20px;!important; border:1px solid black;!important;"/>  Unpaid
                            </t>
                            <t t-if="o.leave_type != 'unpaid'">
                                <input type="checkbox" style="height:20px; !important;width:20px;!important; border:1px solid black;!important;"/>  Unpaid
                            </t>
                        </div>
                        <div class="col-xs-3">
                            <t t-if="o.leave_type == 'others'">
                                <input type="checkbox" checked="checked" style="height:20px; !important;width:20px;!important; border:1px solid black;!important;"/>   <span>Others<small>(Please specify):</small></span>
                            </t>
                            <t t-if="o.leave_type != 'others'">
                                <input type="checkbox" style="height:20px; !important;width:20px;!important; border:1px solid black;!important;"/>  
                                <span>Others<small>(Please specify):</small></span>
                            </t>
                        </div>
                        <t t-if="o.leave_type == 'others'">
                            <div class="col-xs-5" style="border-bottom:1px dotted black;!important;"><sapn t-esc="o.resign"/></div>
                        </t>
                    </div>
                    <div class="row mt8 mb8">
                        <div class="col-xs-5" >
                            <div class="row" style="color:white; !important;background-color:#ff5200;important;font-weight: 900;!important;">
                                <div class="col-xs-12" >
                                    PROPOSED SCHEDULE DETAILS
                                </div>
                            </div>
                            <div class="row">
                                <table class="table" style="border:1px solid black;!important;">
                                    <thead>
                                      <tr>
                                        <th class="text-center"  style="border-right:1px solid black;!important;background-color:#dddddd;important;">DAY</th>
                                        <th class="text-center"  style="border-right:1px solid black;!important;background-color:#dddddd;important;">START TIME</th>
                                        <th class="text-center" style="background-color:#dddddd;important;">END TIME</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <tr t-foreach="o.schedule_ids" t-as="line">
                                        <td class="text-center" style="border-right:1px solid black;!important;"><p t-field="line.days"/></td>
                                        <td class="text-center" style="border-right:1px solid black;!important;"><p t-esc="line.start_time"/></td>
                                        <td class="text-center"><p t-esc="line.end_time"/></td>
                                      </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-xs-1"></div>
                        <div class="col-xs-6" style="background-color:#dddddd;important;border-left:1px solid black;border-right:1px solid black;border-bottom:1px solid black;">
                            <div class="row" style="color:white; !important;background-color:#ff5200;important;font-weight: 900;!important;">
                                <div class="col-xs-12" >
                                    APPLICATION AGREEMENT / STATUS
                                </div>
                            </div>
                            <div class="row mt8 mb8" style="background-color:#dddddd;important;">
                                <div class="col-xs-8"><samll>1.Proposed work from home schedule will notaffect the operations negatively.</samll></div>
                                <t t-if="o.is_negatively == 'yes'"><div class="col-xs-2"><input type="checkbox" checked="checked"/><samll>Yes</samll></div></t>
                                <t t-if="o.is_negatively != 'yes'"><div class="col-xs-2"><input type="checkbox"/><samll>Yes</samll></div></t>
                                <t t-if="o.is_negatively == 'no'"><div class="col-xs-2"><input type="checkbox" checked="checked"/> <samll> No</samll></div></t>
                                <t t-if="o.is_negatively != 'no'"><div class="col-xs-2"><input type="checkbox"/><samll> No</samll></div></t>
                            </div>
                            <div class="row mt8 mb8" style="background-color:#dddddd;important;">
                                <div class="col-xs-8"><samll>2. The practice will not cause overtime or additional workload.</samll></div>
                                <t t-if="o.is_workload == 'yes'"><div class="col-xs-2"><input type="checkbox" checked="checked"/><samll>Yes</samll></div></t>
                                <t t-if="o.is_workload != 'yes'"><div class="col-xs-2"><input type="checkbox"/><samll>Yes</samll></div></t>
                                <t t-if="o.is_workload == 'no'"><div class="col-xs-2"><input type="checkbox" checked="checked"/> <samll> No</samll></div></t>
                                <t t-if="o.is_workload != 'no'"><div class="col-xs-2"><input type="checkbox"/><samll> No</samll></div></t>
                            </div>
                            <div class="row mt8 mb8" style="background-color:#dddddd;important;">
                                <div class="col-xs-8"><samll>3. Employee performance can be monitored / tracked during work from home practice.</samll></div>
                                <t t-if="o.is_practice == 'yes'"><div class="col-xs-2"><input type="checkbox" checked="checked"/><samll>Yes</samll></div></t>
                                <t t-if="o.is_practice != 'yes'"><div class="col-xs-2"><input type="checkbox"/><samll>Yes</samll></div></t>
                                <t t-if="o.is_practice == 'no'"><div class="col-xs-2"><input type="checkbox" checked="checked"/> <samll> No</samll></div></t>
                                <t t-if="o.is_practice != 'no'"><div class="col-xs-2"><input type="checkbox"/><samll> No</samll></div></t>
                            </div>
                            <div class="row mt8 mb8" style="background-color:#dddddd;important;">
                                <div class="col-xs-5"><samll>4. Approval of the Request</samll></div>
                                <t t-if="o.is_request == 'approved'"><div class="col-xs-4"><input type="checkbox" checked="checked"/>  <samll>Approved</samll></div></t>
                                <t t-if="o.is_request != 'approved'"><div class="col-xs-4"><input type="checkbox"/><samll>  Approved</samll></div></t>
                                <t t-if="o.is_request == 'denied'"><div class="col-xs-3"><input type="checkbox" checked="checked"/> <samll>Denied</samll></div></t>
                                <t t-if="o.is_request != 'denied'"><div class="col-xs-3"><input type="checkbox"/><samll> Denied</samll></div></t>
                            </div>
                            <div class="row mt16 mb32" style="background-color:#dddddd;important;">
                                <div class="col-xs-12"><samll>5. Additional Comments / Considerations</samll></div>
                                <div class="col-xs-1"></div>
                                <div class="col-xs-10" style="important;border:1px solid black;!important;height:70px !important;font-size:10px;"><span t-esc="o.considerations"/>
                                <sapn t-esc="considerations"/>
                                </div>
                                <div class="col-xs-1"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 mb16">
                        <div class="col-xs-12" style="color:white; !important;background-color:#ff5200;important;font-weight: 900;!important;">
                            SIGNATURES
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4" style="border:1px solid black; !important; background-color:#dddddd;important;">
                            Employee’s Signature
                        </div>
                        <div class="col-xs-4" style="border:1px solid black; !important; background-color:#dddddd;important;">
                            Dep’t. Head / Manager ‘s Signature
                        </div>
                        <div class="col-xs-4" style="border:1px solid black; !important; background-color:#dddddd;important;">
                            HR Department Manager’s Signature
                        </div>
                    </div>
                    <span t-set="company_id" t-value='request.env.user.company_id'/>
                    <div class="row">
                        <div class="col-xs-4" style="border:1px solid black; !important;">
                            <img t-attf-src="data:image/*;base64,{{company_id.emp_signature}}" width="200" height="80"/>
                        </div>
                        <div class="col-xs-4" style="border:1px solid black; !important;">
                            <img t-attf-src="data:image/*;base64,{{company_id.manager_signature}}" width="200" height="80"/>
                        </div>
                        <div class="col-xs-4" style="border:1px solid black; !important;">
                            <img t-attf-src="data:image/*;base64,{{company_id.hr_signature}}" width="200" height="80"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4" style="border:1px solid black; !important; background-color:#dddddd;important;">
                            Date :  <span t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"></span>
                        </div>
                        <div class="col-xs-4" style="border:1px solid black; !important; background-color:#dddddd;important;">
                            Date :  <span t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"></span>
                        </div>
                        <div class="col-xs-4" style="border:1px solid black; !important; background-color:#dddddd;important;">
                            Date :  <span t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"></span>
                        </div>
                    </div>
                    <div class="row mt16 mb16">
                        <div class="col-xs-10" style="color:white; !important;background-color:black;important;font-weight: 900;!important;">
                            Note: Any changes to the date by either applicant or manager must be signed and initialed by both.
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="report_work_from_home_extended">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="hr_work_from_home.report_hr_work_from_home_document" />

                </t>
            </t>
        </template>
    </data>
</odoo>