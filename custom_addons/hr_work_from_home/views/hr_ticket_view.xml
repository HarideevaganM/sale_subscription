<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_home_tickets_form_view" model="ir.ui.view" >
            <field name="name">hr.employee.work.tickets.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
               <xpath expr="//page[last()]" position="after">
                    <page string='Work From Home'>
                        <field name="work_home_ids"/>
                    </page>
                    <page string='Tickets'>
                       <field name="ticket_allocation_ids"/> 
                    </page>
               </xpath>
            </field>
        </record>

        <record id="view_hr_ticket_allocation_tree" model="ir.ui.view">
            <field name="name">hr_ticket.allocation.tree</field>
            <field name="model">hr.ticket.allocation</field>
            <field name="arch" type="xml">
                <tree string="Ticket Allocation Tree">
                    <field name="employee_id"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="balance"/>
                    <field name="amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_ticket_allocation_form" model="ir.ui.view">
            <field name="name">hr.ticket.allocation.form</field>
            <field name="model">hr.ticket.allocation</field>
            <field eval="12" name="priority"/>
            <field name="arch" type="xml">
                <form string="Ticket Allocation Form">
                    <header>
                        <button name="button_confirm" string="Confirm" states='draft' type="object" class="oe_highlight" groups='hr.group_hr_manager'/>
                        <button name="button_reset" string="Reset" states='confirm' type="object" class="oe_highlight" groups='hr.group_hr_manager'/>
                        <button name="button_approved" string="Approved" states='confirm' type="object" class="oe_highlight" groups='hr.group_hr_manager'/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="from_date" required="1"/>
                            </group>
                            <group>
                                <field name="employee_id" required="1"/>
                                <field name="to_date" required="1"/>
                            </group>
                            <group>
                                <field name="amount" required="1"/>
                                <field name="balance"/>
                            </group>
                            <group>
                                <field name="credit"/>
                                <field name="total_amount"/>

                            </group>
                        </group>
                        <notebook>
                            <page string='Request Information'>
                                <field name='request_ids' readonly='1'/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hr_ticket_allocation" model="ir.actions.act_window">
            <field name="name">Ticket Allocation</field>
            <field name="res_model">hr.ticket.allocation</field>
            <!--          <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_hr_tickets" name="Tickets" parent="hr.menu_hr_root" sequence="4" groups="hr.group_hr_manager"/>
        <menuitem id="menu_hr_ticket_allocation" name="Ticket Allocation" action="action_hr_ticket_allocation" parent="menu_hr_tickets" sequence="1" groups='hr.group_hr_manager'/>

        <record id="view_hr_ticket_request_tree" model="ir.ui.view">
            <field name="name">hr_ticket.request.tree</field>
            <field name="model">hr.ticket.request</field>
            <field name="arch" type="xml">
                <tree string="Ticket Request Tree">
                    <field name="employee_id"/>
                    <field name="date"/>
                    <field name="destination"/>
                    <field name="amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_ticket_request_form" model="ir.ui.view">
            <field name="name">hr.ticket.request.form</field>
            <field name="model">hr.ticket.request</field>
            <field eval="12" name="priority"/>
            <field name="arch" type="xml">
                <form string="Ticket Request Form">
                    <header>
                        <button name="button_reset" string="Reset" states='submit' type="object" class="oe_highlight"/>
                        <button name="button_submit" string="Submit" states='draft' type="object" class="oe_highlight"/>
                        <button name="button_confirm" string="Confirm" states='submit' type="object" class="oe_highlight" groups='hr.group_hr_manager'/>
                        <button name="button_ceo_approved" groups='hr_work_from_home.group_fms_ceo' string="CEO Approved" states="confirm" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" required="1"/>
                                <field name="date" required="1"/>
                            </group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="allocation_id" domain="[('employee_id', '=', employee_id), ('state', '=', 'approved')]" options="{'no_create': True}"/>
                                <field name="company_id" required="1"/>
                            </group>
                            <group col='4' colspan='5'>
                                <field name="destination" required="1"/>
                                <field name="amount" required="1"/>
                            </group>
                        </group>
                        <group colspan='6'>
                            <field name="note"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hr_ticket_request" model="ir.actions.act_window">
            <field name="name">Request For Ticket</field>
            <field name="res_model">hr.ticket.request</field>
            <!--          <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_hr_ticket_request" name="Request For Ticket" action="action_hr_ticket_request" parent="menu_hr_tickets" sequence="2"/>

    </data>
</odoo>