<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id ="bank_advice_report_form" model="ir.ui.view">
		<field name ="name">bank.advice.report.form</field>
		<field name ="model">bank.advice.report</field>
		<field name ="arch" type="xml">
			<form>
				  <group>
                <group>
                    <field name="date_start"/>
                    <field name="reference_code"/>
                </group>
                <group>
                    <field name="date_end"/>
                </group>
            </group>
				<footer>
						<button name="print_report" string="Report" type="object" class="oe_highlight"/>
						<button string="Close" class="btn-primary" special="cancel"/>
					</footer>
			</form>
		</field>
	</record>
	
