<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="lot_serial_view_form" model="ir.ui.view">
        <field name="name">lot.serial.wizard.from</field>
        <field name="model">lot.serial.wizard</field>
        <field name="arch" type="xml">
            <form>
                <div class="text-center">
                    <field name="message" nolabel="1"/>
                </div>
                <footer>
                    <button name="print_report_csv" string="Print CSV" class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>


    <act_window 
        id="action_lot_serial_view_form"
        name="Download Serial File"
        src_model="job.card"
        res_model="lot.serial.wizard"
        view_type="form"
        view_mode="form"
        key2="client_action_multi"
        target="new"
    />

</odoo>