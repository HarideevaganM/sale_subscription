<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

	 <record id="unit_sale_subscription_view_list" model="ir.ui.view">
        <field name="name">sale.subscription.list</field>
        <field name="model">sale.order</field>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>
        <field name="arch" type="xml">
            <tree string="Sale Subscriptions" >
<!--				<field name="code"/>-->
				<field name="partner_id"/>
               <field name="vehicle_number"/>
				<field name="serial_no"/>
				<field name="date_start"/>
				<field name="subscription_period"/>
				<field name="date"/>
				<field name="subscription_status" string="Device Status"/>
				<field name="status_renewal"/>
				<field name="renewal_date"/>
<!--				<field name="recurring_total"/>-->
                <field name="stage_id"/>
            </tree>
        </field>
    </record>

			<!--Unit Subscription/ Walkin Subscription Action -->

		<record id="unit_subscription_action" model="ir.actions.act_window">
			<field name="name">Unit/Walkin Subscription</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">sale.order</field>
	<!--		<field name="view_type">form</field>-->
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="unit_sale_subscription_view_list"/>
			<field name="context">{'group_by':['status_renewal'], 'search_default_is_subscription': True, 'default_is_subscription': True}</field>
			<field name="domain">[('sale_type', 'in', ('cash', 'purchase')), ('is_subscription', '=', True)]</field>
		</record>

		<!--Unit Subscription/ Walkin Subscription Menue -->

<!--		<menuitem id="menu_subscription_list" name="Renewal list" action="unit_subscription_action" parent="sale_subscription.menu_sale_subscription" sequence="100"/>-->


		 <record id="lease_sale_subscription_view_list" model="ir.ui.view">
        <field name="name">sale.subscription.list</field>
        <field name="model">sale.order</field>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>
        <field name="arch" type="xml">
            <tree string="Sale Subscriptions" >
<!--				<field name="code"/>-->
				<field name="partner_id"/>
               <field name="vehicle_number"/>
				<field name="serial_no"/>
				<field name="date_start"/>
				<field name="subscription_period"/>
				<field name="date"/>
				<field name="subscription_status" string="Device Status"/>
				<field name="invoice_status"/>
				<field name="invoiced_date"/>
<!--				<field name="recurring_total"/>-->
                <field name="stage_id"/>

            </tree>
        </field>
    </record>

		<record id="lease_subscription_action" model="ir.actions.act_window">
		<field name="name">Lease/Rental Subscription</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">sale.order</field>
<!--		<field name="view_type">form</field>-->
		<field name="view_mode">tree,form</field>
		<field name="view_id" ref="lease_sale_subscription_view_list"/>
        <field name="context">{'group_by':['invoice_status'], 'search_default_is_subscription': True, 'default_is_subscription': True}</field>
        <field name="domain">[('sale_type', 'in', ('lease', 'rental')), ('is_subscription', '=', True)]</field>
		</record>


<!--		<menuitem id="menu_lease_subscription_list" name="Leasing list" action="lease_subscription_action" parent="sale_subscription.menu_sale_subscription" sequence="101"/>-->

		<record id="seller_subscription_action" model="ir.actions.act_window">
			<field name="name">Subscription Seller List</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">sale.order</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'search_default_is_subscription': True, 'default_is_subscription': True}</field>
			<field name="domain">[('partner_id.subscription_customer', '=', 'reseller_customer'), ('is_subscription',
				'=', True)]
			</field>
		</record>
<!--		<menuitem id="menu_seller_subscription_list" name="Reseller list " action="seller_subscription_action" parent="sale_subscription.menu_sale_subscription" sequence="102"/>-->

    </data>
</odoo>