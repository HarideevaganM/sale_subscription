<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_repair_form_view" model="ir.ui.view">
        <field name="name">repair.order.form</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//form/header/button[@name='action_validate']" position="after">
                <button name="%(action_internal_mrp)d" type="action" string="Move Internally" attrs="{'invisible': [('state', '!=', 'ready')]}" class="oe_highlight"/>
            </xpath>
        </field>
    </record>

</odoo>
