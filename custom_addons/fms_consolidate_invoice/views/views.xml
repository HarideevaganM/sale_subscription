<odoo>
    <data>

        <record id="view_consolidate_invoice_form" model="ir.ui.view">
            <field name="name">view.consolidate.invoice.form</field>
            <field name="model">consolidate.invoice</field>
            <field name="arch" type="xml">
                <form string="Consolidate Invoice">
                    <header>
                        <button name="button_confirm" type="object" string="Confirm" class="oe_highlight"
                                states="draft"/>
                        <!--                        <button name="create_invoice" type="object" string="Create Consolidate" class="oe_highlight"-->
                        <!--                                states="confirm"/>-->
                        <button name="button_cancel" type="object" string="Cancel" states="draft,done"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <!--                        <div class="oe_button_box" name="button_box">-->
                        <!--                            <button name="view_consolidated_invoice" type="object" widget="statinfo"-->
                        <!--                                    class="oe_stat_button" icon="fa-user"-->
                        <!--                                    attrs="{'invisible': [('consolidated_count', '=', 0)]}">-->
                        <!--                                <field name="consolidated_count" widget="statinfo" string="Consolidated Invoice"/>-->
                        <!--                            </button>-->
                        <!--                        </div>-->
                        <div class="pull-left">
                            <label for="name" class="oe_edit_only oe_inline"/>
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date_from"/>
                                <field name="partner_id"/>
                                <field name="date_consolidate"/>
                            </group>
                            <group>
                                <field name="date_to"/>
                                <field name="invoice_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Product Details">
                                <field name="consolidate_line_ids">
                                    <tree>
                                        <field name="product_id"/>
                                        <field name="name"/>
                                        <field name="quantity"/>
                                        <field name="account_id"/>
                                        <field name="uom_id"/>
                                        <field name="price_unit"/>
                                        <field name="discount"/>
                                        <field name="price_subtotal"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="product_id"/>
                                                <field name="name"/>
                                                <field name="quantity"/>
                                                <field name="account_id"/>
                                            </group>
                                            <group>
                                                <field name="uom_id"/>
                                                <field name="price_unit"/>
                                                <field name="discount"/>
                                                <field name="price_subtotal"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="amount_untaxed"/>
                                    <field name="amount_tax"/>
                                    <field name="amount_total" class="oe_subtotal_footer_separator"/>
                                    <!--                                    <field name="payments_widget" colspan="2" nolabel="1" widget="payment"/>-->
                                    <!--                                    <field name="residual" class="oe_subtotal_footer_separator"-->
                                    <!--                                           attrs="{'invisible': [('state', '=', 'draft')]}"/>-->
                                    <!--                                    <field name="reconciled" invisible="1"/>-->
                                    <!--                                    <field name="outstanding_credits_debits_widget" colspan="2" nolabel="1"-->
                                    <!--                                           widget="payment" attrs="{'invisible': [('state', 'not in', 'open')]}"/>-->
                                </group>
                                <field name="comment" placeholder="Terms and conditions..."/>
                            </page>
                            <page string="Vehicle Details">
                                <field name="vehicle_line_ids">
                                    <tree>
                                        <field name="serial_no_id"/>
                                        <field name="device_id"/>
                                        <field name="vehicle_id"/>
                                        <field name="installation_date"/>
                                        <field name="status"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="serial_no_id"/>
                                            <field name="device_id"/>
                                            <field name="vehicle_id"/>
                                            <field name="installation_date"/>
                                            <field name="status"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_consolidate_invoice_tree" model="ir.ui.view">
            <field name="name">view.consolidate.invoice.form</field>
            <field name="model">consolidate.invoice</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="partner_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_consolidate_invoice" model="ir.actions.act_window">
            <field name="name">Consolidate Invoice</field>
            <field name="res_model">consolidate.invoice</field>
            <!--          <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_consolidate_invoice"
                  name="Consolidate Invoice"
                  parent="account.menu_finance_receivables_documents"
                  action="action_consolidate_invoice"
                  groups="account.group_account_user"
                  sequence="5"/>

    </data>
</odoo>