<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="purchase_order_form_inherit_extended">
        <field name="name">purchase.order.form.inherit.extended</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="notes" position="after">
                <field name="tc" class="oe_inline" placeholder="Define your terms and conditions ..."/>
                <field name="oc" class="oe_inline" placeholder="Define your order cancellation ..."/>
            </field>
        </field>
    </record>
    <record id="company_form_inherit_extended" model="ir.ui.view">
        <field name="name">res.company.form.inherit.extended</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="payment_authority"/>
                <field name="quality_assurance"/>
                <field name="gstin"/>
            </field>
        </field>
    </record>
</odoo>
