<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="emp_summary_view_form" model="ir.ui.view">
        <field name="name">emp.summary.wizard.from</field>
        <field name="model">emp.summary.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="start_date"/>
                    </group>
                    <group>
                        <field name="end_date"/>
                    </group>
                </group>
                <footer>
                    <button name="print_report" string="Print" class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_view_emp_summary">
        <field name="name">Employee Summary XLS</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">emp.summary.wizard</field>
        <field name="view_id" ref="emp_summary_view_form"/>
        <!--          <field name="view_type">form</field>-->
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="action_emp_summary_view_form" model="ir.actions.act_window">
            <field name="name">Employee Summary</field>
            <field name="res_model">emp.summary.wizard</field>
             <field name="view_mode">form</field>
            <field name="target">new</field>
    </record>
</odoo>